<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="min-h-[80vh] flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background Decoration -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none">
        <div class="absolute -top-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-red-200/30 blur-3xl"></div>
        <div class="absolute top-[40%] -right-[10%] w-[40%] h-[40%] rounded-full bg-purple-200/30 blur-3xl"></div>
    </div>

    <div class="max-w-md w-full space-y-8 relative z-10">
        <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl p-8 border border-white/50">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 mb-4">
                    <i class="ri-login-circle-line text-3xl text-red-600"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-900 tracking-tight">Welcome Back</h2>
                <p class="mt-2 text-sm text-gray-600">Sign in to access your account</p>
            </div>

            <% if (errorMessage) { %>
                <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg flex items-center mb-6 text-sm" role="alert">
                    <i class="ri-error-warning-fill text-lg mr-2"></i>
                    <span><%= errorMessage %></span>
                </div>
            <% } %>

            <div class="space-y-6">
                <div class="flex flex-col items-center justify-center p-6 bg-gray-50 rounded-xl border border-gray-100 border-dashed">
                    <p class="text-gray-600 mb-4 font-medium text-sm">Authenticate with your phone</p>
                    
                    <!-- Phone.email Configuration -->
                    <div class="pe_signin_button" data-client-id="11157398436047844963"></div>
                    <script src="https://www.phone.email/sign_in_button_v1.js" async></script>
                </div>

                <form action="/login" method="POST" id="loginForm" class="hidden">
                    <input type="hidden" name="user_json_url" id="user_json_url">
                </form>

                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">New to our platform?</span>
                    </div>
                </div>

                <div class="text-center">
                    <a href="/signup" class="inline-flex items-center justify-center w-full px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                        Create an account
                    </a>
                </div>
            </div>
        </div>
        
        <p class="text-center text-xs text-gray-500">
            By signing in, you agree to our <a href="#" class="underline hover:text-gray-900">Terms of Service</a> and <a href="#" class="underline hover:text-gray-900">Privacy Policy</a>.
        </p>
    </div>
</main>

<script>
    // Phone.email listener
    function phoneEmailListener(userObj) {
        const user_json_url = userObj.user_json_url;
        const user_phone_number = userObj.user_phone_number;
        
        if (user_json_url) {
            document.getElementById('user_json_url').value = user_json_url;
            document.getElementById('loginForm').submit();
        }
    }
</script>

<%- include('../partials/footer') %>
