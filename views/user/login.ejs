<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-12 flex flex-col items-center justify-center min-h-[60vh]">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Login</h1>
        
        <% if (errorMessage) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= errorMessage %></span>
            </div>
        <% } %>

        <div class="text-center mb-6">
            <p class="text-gray-600 mb-4">Sign in using your mobile number</p>
            
            <!-- Phone.email Configuration -->
            <div class="pe_signin_button" data-client-id="11157398436047844963"></div>
            <script src="https://www.phone.email/sign_in_button_v1.js" async></script>
            
            <!-- Placeholder for dev/testing if script is missing -->
            <div class="mt-4 p-4 border border-dashed border-gray-300 rounded bg-gray-50 text-sm text-gray-500">
                Phone.email authentication button will appear here.
                <br>
                (Requires Integration Script)
            </div>
        </div>

        <form action="/login" method="POST" id="loginForm" class="hidden">
            <input type="hidden" name="user_json_url" id="user_json_url">
        </form>

        <div class="mt-8 text-center">
            <p class="text-gray-600">Don't have an account? <a href="/signup" class="text-blue-600 hover:text-blue-800 font-semibold">Sign Up</a></p>
        </div>
    </div>
</main>

<script>
    // Phone.email listener
    function phoneEmailListener(userObj) {
        const user_json_url = userObj.user_json_url;
        const user_phone_number = userObj.user_phone_number;
        
        if (user_json_url) {
            document.getElementById('user_json_url').value = user_json_url;
            document.getElementById('loginForm').submit();
        }
    }
</script>

<%- include('../partials/footer') %>
