<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <%- include('../partials/header') %>

    <main class="flex-grow pt-8 pb-12">
        <div class="max-w-7xl mx-auto px-4">
            
            <!-- Breadcrumb -->
            <nav class="flex mb-8 text-sm text-gray-500">
                <a href="/" class="hover:text-[#a51c30]">Home</a>
                <span class="mx-2">/</span>
                <span class="text-gray-900 font-medium">Monitors</span>
            </nav>

            <!-- Hero Section -->
            <% 
            const brandConfig = {
                'Dell': {
                    gradient: 'linear-gradient(135deg, #021B35 0%, #004E8F 50%, #007DB8 100%)',
                    title: 'Dell UltraSharp & P-Series',
                    subtitle: 'Details That Pop.',
                    desc: 'Experience vibrant colors and sharp details with Dell\'s premium monitors.',
                    image: '/images/hero-monitors.png',
                    badge: 'Professional Grade',
                    textGradient: 'from-cyan-300 to-red-200'
                },
                'HP': {
                    gradient: 'linear-gradient(135deg, #002D3A 0%, #006D85 50%, #00A6C7 100%)',
                    title: 'HP E-Series & ProDisplay',
                    subtitle: 'Comfort & Clarity.',
                    desc: 'Ergonomic designs with eye-ease technology for long work hours.',
                    image: '/images/hero-monitors.png',
                    badge: 'Business Ready',
                    textGradient: 'from-teal-300 to-emerald-200'
                },
                'LG': {
                    gradient: 'linear-gradient(135deg, #2A0916 0%, #A50034 50%, #FF4E50 100%)',
                    title: 'LG UltraGear & UltraWide',
                    subtitle: 'Expand Your View.',
                    desc: 'Immersive ultrawide displays and high-refresh gaming monitors.',
                    image: '/images/hero-monitors.png',
                    badge: 'Innovation Leader',
                    textGradient: 'from-red-400 to-pink-300'
                },
                'Samsung': {
                    gradient: 'linear-gradient(135deg, #030F2B 0%, #1428A0 50%, #2979FF 100%)',
                    title: 'Samsung Odyssey & Smart',
                    subtitle: 'The Future of Gaming.',
                    desc: 'Curved displays and smart features that redefine your visual experience.',
                    image: '/images/hero-monitors.png',
                    badge: 'Visual Masterpiece',
                    textGradient: 'from-red-400 to-indigo-300'
                },
                'BenQ': {
                    gradient: 'linear-gradient(135deg, #1A0524 0%, #4A148C 50%, #7B1FA2 100%)',
                    title: 'BenQ Mobiuz & PD Series',
                    subtitle: 'Color Accuracy Matters.',
                    desc: 'Designed for designers and gamers who demand precise colors.',
                    image: '/images/hero-monitors.png',
                    badge: 'Designer\'s Choice',
                    textGradient: 'from-purple-400 to-fuchsia-300'
                },
                'Acer': {
                    gradient: 'linear-gradient(135deg, #0F2027 0%, #203A43 50%, #2C5364 100%)',
                    title: 'Acer Predator & Nitro',
                    subtitle: 'Speed Unleashed.',
                    desc: 'High refresh rates and low response times for competitive gaming.',
                    image: '/images/hero-monitors.png',
                    badge: 'Gaming Beast',
                    textGradient: 'from-green-400 to-teal-300'
                },
                'Default': {
                    gradient: 'linear-gradient(135deg, #0F2027 0%, #203A43 50%, #2C5364 100%)',
                    title: 'Crystal Clear Displays',
                    subtitle: 'Upgrade Your View.',
                    desc: 'Explore our wide selection of certified refurbished monitors from top brands.',
                    image: '/images/hero-monitors.png',
                    badge: 'Simtech Assured',
                    textGradient: 'from-red-300 to-cyan-300'
                }
            };

            const config = (typeof currentBrand !== 'undefined' && brandConfig[currentBrand]) ? brandConfig[currentBrand] : brandConfig['Default'];
            %>

            <% if (config) { %>
                <div class="mb-8 relative rounded-2xl overflow-hidden shadow-2xl min-h-[250px] md:min-h-[280px] grid grid-cols-1 md:grid-cols-2 items-center" style="background: <%= config.gradient %>;">
                    <!-- Subtle Noise Overlay for Texture -->
                    <div class="absolute inset-0 opacity-10 mix-blend-overlay pointer-events-none" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg')"></div>

                     <!-- Text Content (Left Column) -->
                    <div class="p-8 md:pl-12 text-left relative z-20">
                        <span class="inline-block px-3 py-1 rounded-full bg-white text-gray-900 text-[10px] font-bold tracking-widest uppercase mb-3 shadow-lg">
                            <%= config.badge %>
                        </span>
                        <h1 class="text-3xl md:text-5xl font-bold text-white leading-tight mb-3 tracking-tight">
                            <%= config.title %>
                        </h1>
                        <p class="text-xl md:text-2xl font-light text-gray-300 mb-4">
                            <span class="bg-gradient-to-r <%= config.textGradient %> bg-clip-text text-transparent font-medium"><%= config.subtitle %></span>
                        </p>
                        <p class="text-gray-400 text-sm md:text-base max-w-md leading-relaxed">
                            <%= config.desc %>
                        </p>
                    </div>

                     <!-- Image (Right Column) -->
                    <div class="h-full w-full flex items-end justify-center md:justify-end relative z-10 pr-0 md:pr-12 pb-0">
                        <img src="<%= config.image %>" alt="<%= config.title %>" class="object-contain h-64 w-auto drop-shadow-2xl translate-y-2">
                    </div>
                </div>
            <% } %>

            <div class="flex flex-col lg:flex-row gap-8">
                
                <!-- Sidebar Filters -->
                <aside class="lg:w-1/4 flex-shrink-0">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-24">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-lg font-bold text-gray-900">Filters</h2>
                            <h2 class="text-lg font-bold text-gray-900">Filters</h2>
                            <a href="/monitors" class="text-sm text-[#a51c30] hover:underline">Clear All</a>
                        </div>

                        <!-- Price Range -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Price</h3>
                            <div class="space-y-2">
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="Under ₹10,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('Under ₹10,000') : currentFilters.price === 'Under ₹10,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Under ₹10,000</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="₹10,000 - ₹20,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('₹10,000 - ₹20,000') : currentFilters.price === '₹10,000 - ₹20,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">₹10,000 - ₹20,000</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="₹20,000 - ₹40,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('₹20,000 - ₹40,000') : currentFilters.price === '₹20,000 - ₹40,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">₹20,000 - ₹40,000</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="Above ₹40,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('Above ₹40,000') : currentFilters.price === 'Above ₹40,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Above ₹40,000</span>
                                </label>
                            </div>
                        </div>

                        <!-- Brand -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Brand</h3>
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="Dell" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('Dell') : currentFilters.brand === 'Dell') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Dell</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="HP" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('HP') : currentFilters.brand === 'HP') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">HP</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="LG" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('LG') : currentFilters.brand === 'LG') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">LG</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="Samsung" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('Samsung') : currentFilters.brand === 'Samsung') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Samsung</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="BenQ" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('BenQ') : currentFilters.brand === 'BenQ') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">BenQ</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="Acer" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('Acer') : currentFilters.brand === 'Acer') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Acer</span>
                                </label>
                            </div>
                        </div>

                        <!-- Screen Size -->
                         <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Screen Size</h3>
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="screenSize" value="21\" - 24\"" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.screenSize && (Array.isArray(currentFilters.screenSize) ? currentFilters.screenSize.includes('21" - 24"') : currentFilters.screenSize === '21" - 24"') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">21" - 24"</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="screenSize" value="25\" - 27\"" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.screenSize && (Array.isArray(currentFilters.screenSize) ? currentFilters.screenSize.includes('25" - 27"') : currentFilters.screenSize === '25" - 27"') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">25" - 27"</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="screenSize" value="28\" - 32\"" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.screenSize && (Array.isArray(currentFilters.screenSize) ? currentFilters.screenSize.includes('28" - 32"') : currentFilters.screenSize === '28" - 32"') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">28" - 32"</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="screenSize" value="34\"+ (Ultrawide)" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.screenSize && (Array.isArray(currentFilters.screenSize) ? currentFilters.screenSize.includes('34"+ (Ultrawide)') : currentFilters.screenSize === '34"+ (Ultrawide)') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">34"+ (Ultrawide)</span>
                                </label>
                            </div>
                        </div>

                        <!-- Resolution -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Resolution</h3>
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="resolution" value="Full HD (1080p)" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.resolution && (Array.isArray(currentFilters.resolution) ? currentFilters.resolution.includes('Full HD (1080p)') : currentFilters.resolution === 'Full HD (1080p)') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Full HD (1080p)</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="resolution" value="2K (1440p)" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.resolution && (Array.isArray(currentFilters.resolution) ? currentFilters.resolution.includes('2K (1440p)') : currentFilters.resolution === '2K (1440p)') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">2K (1440p)</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="resolution" value="4K UHD" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.resolution && (Array.isArray(currentFilters.resolution) ? currentFilters.resolution.includes('4K UHD') : currentFilters.resolution === '4K UHD') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">4K UHD</span>
                                </label>
                            </div>
                        </div>

                        <!-- Refresh Rate -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Refresh Rate</h3>
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="refreshRate" value="60Hz - 75Hz" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.refreshRate && (Array.isArray(currentFilters.refreshRate) ? currentFilters.refreshRate.includes('60Hz - 75Hz') : currentFilters.refreshRate === '60Hz - 75Hz') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">60Hz - 75Hz</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="refreshRate" value="144Hz" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.refreshRate && (Array.isArray(currentFilters.refreshRate) ? currentFilters.refreshRate.includes('144Hz') : currentFilters.refreshRate === '144Hz') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">144Hz</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="refreshRate" value="165Hz+" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.refreshRate && (Array.isArray(currentFilters.refreshRate) ? currentFilters.refreshRate.includes('165Hz+') : currentFilters.refreshRate === '165Hz+') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">165Hz+</span>
                                </label>
                            </div>
                        </div>

                    </div>
                </aside>

                <!-- Product Grid -->
                <div class="lg:w-3/4 flex flex-col min-h-[600px]">
                    
                    <!-- Header -->
                    <div class="flex justify-between items-center mb-6">
                        <h1 class="text-2xl font-bold text-gray-900"><%= currentBrand !== 'All' ? currentBrand + ' Monitors' : 'All Monitors' %> <span class="text-gray-500 text-lg font-normal ml-2">(<%= products.length %> items)</span></h1>
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-gray-600">Sort by:</span>
                            <select class="border border-gray-300 rounded-lg px-3 py-1.5 text-sm outline-none focus:border-[#a51c30]">
                                <option>Featured</option>
                                <option>Price: Low to High</option>
                                <option>Price: High to Low</option>
                                <option>Newest Arrivals</option>
                            </select>
                        </div>
                    </div>

                    <!-- Grid -->
                    <!-- Grid -->
                    <% if (products.length > 0) { %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% products.forEach(product => { %>
                        <div class="bg-white rounded-xl border border-gray-200 p-4 hover:shadow-lg transition-all duration-300 relative group">
                            <a href="/product/<%= product.slug %>" class="block">
                                <div class="flex justify-between items-start mb-4">
                                    <div class="bg-black text-white text-[10px] font-bold px-2 py-1.5 rounded-full flex items-center gap-1">
                                         <i class="ri-checkbox-circle-fill text-green-400 text-sm"></i> SIMTECH ASSURED
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <div class="border border-green-300 text-green-700 text-[10px] font-bold px-2 py-0.5 rounded bg-green-50">
                                            -<%= product.discount %>%
                                        </div>
                                        <button onclick="event.preventDefault(); shareProduct('<%= product.name %>', '/product/<%= product.slug %>')" class="text-gray-400 hover:text-[#a51c30] transition-colors z-20">
                                            <i class="ri-share-forward-line text-lg"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="h-48 flex items-center justify-center mb-4 relative">
                                    <img src="<%= optimizeImage(product.image) %>" alt="<%= product.name %>" class="object-contain h-full w-full group-hover:scale-105 transition-transform duration-500">
                                </div>
                                <h3 class="font-bold text-gray-900 text-base leading-snug mb-3 line-clamp-2"><%= product.name %></h3>
                                <div class="flex items-center gap-2 mb-4">
                                    <span class="bg-red-700 text-white text-[10px] font-bold px-2 py-1 rounded">Best Price Guaranteed</span>
                                    <div class="flex items-center gap-1 border border-gray-200 px-1.5 py-0.5 rounded textxs font-bold text-gray-700 bg-gray-50">
                                        <%= product.rating %> <i class="ri-star-fill text-yellow-400 text-[10px]"></i>
                                    </div>
                                </div>
                                <div class="flex items-baseline gap-2 flex-wrap">
                                    <span class="text-xl font-bold text-gray-900">₹<%= product.price.toLocaleString('en-IN') %></span>
                                    <span class="text-gray-400 text-xs line-through">₹<%= product.mrp.toLocaleString('en-IN') %></span>
                                </div>
                            </a>
                            <% if (product.inStock) { %>
                                <% if (isAuthenticated) { %>
                                    <form action="/cart" method="POST">
                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                        <button type="submit" class="absolute bottom-4 right-4 bg-[#a51c30] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-red-700 transition-colors shadow-md z-20">
                                            <i class="ri-shopping-cart-2-line"></i>
                                        </button>
                                    </form>
                                <% } else { %>
                                    <button type="button" onclick="showLoginModal()" class="absolute bottom-4 right-4 bg-[#a51c30] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-red-700 transition-colors shadow-md z-20">
                                        <i class="ri-shopping-cart-2-line"></i>
                                    </button>
                                <% } %>
                            <% } else { %>
                                <button disabled class="absolute bottom-4 right-4 bg-gray-200 text-gray-400 w-8 h-8 rounded-full flex items-center justify-center cursor-not-allowed z-20">
                                    <i class="ri-shopping-cart-2-line"></i>
                                </button>
                            <% } %>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                        <div class="w-full text-center py-12 text-gray-500 bg-gray-50 rounded-xl border border-dashed border-gray-300">
                            <p class="text-lg">There are no monitors at the moment.</p>
                        </div>
                    <% } %>

                    <!-- Pagination -->
                    <div class="flex justify-center mt-auto pt-12">
                        <nav class="flex gap-2">
                             <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">
                                <i class="ri-arrow-left-s-line"></i>
                            </a>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center bg-[#a51c30] text-white font-bold">1</a>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">2</a>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">3</a>
                            <span class="w-10 h-10 flex items-center justify-center text-gray-400">...</span>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">
                                <i class="ri-arrow-right-s-line"></i>
                            </a>
                        </nav>
                    </div>

                </div>
            </div>
            <!-- You May Also Like Section (Optional for Monitors, keep simple for now) -->
             <div class="mt-20">
                <div class="flex justify-between items-end mb-8">
                    <h2 class="text-2xl font-bold text-gray-900">Trending Accessories</h2>
                    <a href="#" class="text-[#a51c30] font-semibold hover:underline flex items-center gap-1 text-sm">
                        View All <i class="ri-arrow-right-line"></i>
                    </a>
                </div>
                 <!-- Placeholder for accessories grid - reusing laptop structure for simplicity but fewer items -->
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                    <div class="bg-white rounded-xl border border-gray-200 p-4 hover:shadow-lg transition-all duration-300 relative group cursor-pointer">
                        <div class="h-40 flex items-center justify-center mb-4">
                             <!-- Placeholder image -->
                             <span class="text-gray-400">HDMI Cables</span>
                        </div>
                         <h3 class="font-bold text-gray-900 text-sm mb-2">High Speed HDMI Cable 2m</h3>
                         <span class="text-lg font-bold text-gray-900">₹499</span>
                    </div>
                     <div class="bg-white rounded-xl border border-gray-200 p-4 hover:shadow-lg transition-all duration-300 relative group cursor-pointer">
                        <div class="h-40 flex items-center justify-center mb-4">
                             <!-- Placeholder image -->
                             <span class="text-gray-400">Monitor Arm</span>
                        </div>
                         <h3 class="font-bold text-gray-900 text-sm mb-2">Dual Monitor Gas Spring Mount</h3>
                         <span class="text-lg font-bold text-gray-900">₹2,499</span>
                    </div>
                </div>

            </div>

        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        function applyFilters() {
            const params = new URLSearchParams();
            
            // Select all checked checkboxes
            document.querySelectorAll('input[type="checkbox"]:checked').forEach(checkbox => {
                params.append(checkbox.name, checkbox.value);
            });

            // Reload with new params
            window.location.href = `${window.location.pathname}?${params.toString()}`;
        }

        async function shareProduct(name, url) {
            const fullUrl = window.location.origin + url;
            
            try {
                await navigator.clipboard.writeText(fullUrl);
                alert('Link copied to clipboard!');
            } catch (err) {
                console.error('Failed to copy:', err);
                // Fallback for older browsers
                const textArea = document.createElement("textarea");
                textArea.value = fullUrl;
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    alert('Link copied to clipboard!');
                } catch (err) {
                    console.error('Fallback copy failed:', err);
                    alert('Failed to copy link. Please copy it manually: ' + fullUrl);
                }
                document.body.removeChild(textArea);
            }
        }
