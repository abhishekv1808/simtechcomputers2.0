                    const iconContainer = button.querySelector('.icon-container');
                    const icon = iconContainer.querySelector('i');

                    // Close all other items
                    document.querySelectorAll('.faq-item').forEach(item => {
                        if (item !== faqItem) {
                            const otherContent = item.querySelector('.faq-content');
                            const otherIconContainer = item.querySelector('.icon-container');
                            const otherIcon = otherIconContainer.querySelector('i');
                            
                            otherContent.style.maxHeight = null;
                            otherContent.classList.remove('opacity-100');
