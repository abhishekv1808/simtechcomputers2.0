<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-12 flex flex-col items-center min-h-[70vh]">
    <div class="w-full max-w-3xl bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
        
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-red-600 to-red-800 px-8 py-10 text-white flex items-center justify-between relative overflow-hidden">
            <div class="absolute top-0 right-0 -mt-10 -mr-10 w-40 h-40 bg-white opacity-10 rounded-full blur-2xl"></div>
            <div class="absolute bottom-0 left-0 -mb-10 -ml-10 w-40 h-40 bg-red-400 opacity-10 rounded-full blur-2xl"></div>
            
            <div class="relative z-10">
                <h1 class="text-3xl font-bold tracking-tight">My Profile</h1>
                <p class="text-red-100 text-sm mt-2 font-medium">Manage your personal information and preferences</p>
            </div>
            <div class="relative z-10 bg-white/20 backdrop-blur-sm p-4 rounded-2xl border border-white/10 shadow-inner">
                <i class="ri-user-settings-line text-4xl text-white"></i>
            </div>
        </div>

        <!-- Feedback Messages -->
        <% if (errorMessage) { %>
            <div class="mx-8 mt-8 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg flex items-center" role="alert">
                <i class="ri-error-warning-fill text-xl mr-2"></i>
                <span><%= errorMessage %></span>
            </div>
        <% } %>
        <% if (successMessage) { %>
            <div class="mx-8 mt-8 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg flex items-center" role="alert">
                <i class="ri-checkbox-circle-fill text-xl mr-2"></i>
                <span><%= successMessage %></span>
            </div>
        <% } %>

        <form action="/profile" method="POST" class="p-8 space-y-8">
            
            <!-- Read-Only Identity Card -->
            <div class="bg-red-50/50 p-6 rounded-xl border border-red-100 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div>
                    <label class="block text-red-800 text-xs font-bold uppercase tracking-wider mb-1">Registered Mobile Number</label>
                    <div class="flex items-center text-gray-800 font-mono text-xl font-semibold">
                        <i class="ri-smartphone-line mr-2 text-red-600"></i>
                        <%= user.phone %>
                    </div>
                    <p class="text-xs text-red-600/70 mt-1">Unique identity â€¢ Cannot be changed</p>
                </div>
                <div class="flex-shrink-0">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                        <i class="ri-verified-badge-fill mr-1.5"></i> Verified Account
                    </span>
                </div>
            </div>

            <div class="border-t border-gray-100 pt-6">
                <h2 class="text-lg font-semibold text-gray-800 mb-6 flex items-center">
                    <i class="ri-edit-box-line mr-2 text-red-600"></i> Editable Details
                </h2>
                
                <!-- Editable Fields -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <div class="space-y-2">
                        <label for="name" class="block text-gray-700 text-sm font-semibold">Full Name</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ri-user-line text-gray-400"></i>
                            </div>
                            <input type="text" name="name" id="name" value="<%= user.name %>" required 
                                class="pl-10 block w-full rounded-lg border-gray-300 bg-gray-50 border focus:bg-white focus:border-red-500 focus:ring-red-500 sm:text-sm py-2.5 transition-colors duration-200 ease-in-out">
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label for="location" class="block text-gray-700 text-sm font-semibold">Location</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ri-map-pin-line text-gray-400"></i>
                            </div>
                            <input type="text" name="location" id="location" value="<%= user.location %>" required 
                                class="pl-10 block w-full rounded-lg border-gray-300 bg-gray-50 border focus:bg-white focus:border-red-500 focus:ring-red-500 sm:text-sm py-2.5 transition-colors duration-200 ease-in-out">
                        </div>
                    </div>

                    <div class="space-y-2 md:col-span-2">
                        <label for="email" class="block text-gray-700 text-sm font-semibold">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ri-mail-line text-gray-400"></i>
                            </div>
                            <input type="email" name="email" id="email" value="<%= user.email || '' %>" placeholder="name@example.com"
                                class="pl-10 block w-full rounded-lg border-gray-300 bg-gray-50 border focus:bg-white focus:border-red-500 focus:ring-red-500 sm:text-sm py-2.5 transition-colors duration-200 ease-in-out">
                        </div>
                    </div>
                    
                    <div class="space-y-2 md:col-span-2">
                        <label for="address" class="block text-gray-700 text-sm font-semibold">Shipping Address</label>
                        <div class="relative">
                            <div class="absolute top-3 left-3 pointer-events-none">
                                <i class="ri-home-4-line text-gray-400"></i>
                            </div>
                            <textarea name="address" id="address" rows="3" placeholder="Enter your full shipping address"
                                class="pl-10 block w-full rounded-lg border-gray-300 bg-gray-50 border focus:bg-white focus:border-red-500 focus:ring-red-500 sm:text-sm py-2.5 transition-colors duration-200 ease-in-out resize-none"><%= user.address || '' %></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end pt-6 border-t border-gray-100">
                <button type="submit" class="bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-bold py-3 px-8 rounded-lg shadow-lg shadow-red-500/30 transform hover:-translate-y-0.5 transition-all duration-200 flex items-center">
                    <i class="ri-save-3-line mr-2 text-lg"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</main>

<%- include('../partials/footer') %>
