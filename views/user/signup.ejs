<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="min-h-[80vh] flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background Decoration -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none">
        <div class="absolute -top-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-red-200/30 blur-3xl"></div>
        <div class="absolute top-[40%] -right-[10%] w-[40%] h-[40%] rounded-full bg-purple-200/30 blur-3xl"></div>
    </div>

    <div class="max-w-md w-full space-y-8 relative z-10">
        <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl p-8 border border-white/50">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 mb-4">
                    <i class="ri-user-add-line text-3xl text-red-600"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-900 tracking-tight">Create Account</h2>
                <p class="mt-2 text-sm text-gray-600">Join us to get started</p>
            </div>

            <% if (errorMessage) { %>
                <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg flex items-center mb-6 text-sm" role="alert">
                    <i class="ri-error-warning-fill text-lg mr-2"></i>
                    <span><%= errorMessage %></span>
                </div>
            <% } %>

            <form action="/signup" method="POST" id="signupForm" class="space-y-6">
                <div class="space-y-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ri-user-line text-gray-400"></i>
                            </div>
                            <input type="text" name="name" id="name" required 
                                class="pl-10 block w-full rounded-lg border-gray-300 bg-gray-50 border focus:bg-white focus:border-red-500 focus:ring-red-500 sm:text-sm py-2.5 transition-colors duration-200 ease-in-out" 
                                placeholder="John Doe">
                        </div>
                    </div>

                    <div>
                        <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ri-map-pin-line text-gray-400"></i>
                            </div>
                            <input type="text" name="location" id="location" required 
                                class="pl-10 block w-full rounded-lg border-gray-300 bg-gray-50 border focus:bg-white focus:border-red-500 focus:ring-red-500 sm:text-sm py-2.5 transition-colors duration-200 ease-in-out" 
                                placeholder="City, Country">
                        </div>
                    </div>
                </div>

                <!-- Hidden input for phone verification result -->
                <input type="hidden" name="user_json_url" id="user_json_url">

                <div class="flex flex-col items-center justify-center p-6 bg-gray-50 rounded-xl border border-gray-100 border-dashed">
                    <p class="text-gray-600 mb-4 font-medium text-sm">Verify your mobile number</p>
                    
                    <!-- Phone.email Configuration -->
                    <div class="pe_signin_button" data-client-id="11157398436047844963"></div>
                    <script src="https://www.phone.email/sign_in_button_v1.js" async></script>
                </div>
                
                <div>
                    <button type="submit" id="submitBtn" disabled
                        class="group relative w-full flex justify-center py-2.5 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gray-400 cursor-not-allowed transition-all duration-200 shadow-sm">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <i class="ri-lock-line text-gray-200 group-hover:text-gray-100"></i>
                        </span>
                        Register Account
                    </button>
                    <p class="mt-2 text-center text-xs text-gray-500" id="verifyHint">
                        * Please verify your phone number to enable registration
                    </p>
                </div>
            </form>

            <div class="relative mt-6">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-200"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-white text-gray-500">Already have an account?</span>
                </div>
            </div>

            <div class="text-center mt-6">
                <a href="/login" class="font-medium text-red-600 hover:text-red-500 transition-colors duration-200">
                    Sign in instead
                </a>
            </div>
        </div>
    </div>
</main>

<script>
    // Phone.email listener
    function phoneEmailListener(userObj) {
        const user_json_url = userObj.user_json_url;
        
        if (user_json_url) {
            document.getElementById('user_json_url').value = user_json_url;
            
            // Enable submit button
            const btn = document.getElementById('submitBtn');
            const hint = document.getElementById('verifyHint');
            
            btn.classList.remove('bg-gray-400', 'cursor-not-allowed');
            btn.classList.add('bg-red-600', 'hover:bg-red-700', 'cursor-pointer', 'shadow-md', 'transform', 'hover:-translate-y-0.5');
            btn.disabled = false;
            btn.innerHTML = `
                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                    <i class="ri-check-line text-red-200 group-hover:text-red-100"></i>
                </span>
                Complete Registration
            `;
            
            if(hint) hint.style.display = 'none';
        }
    }
</script>

<%- include('../partials/footer') %>
