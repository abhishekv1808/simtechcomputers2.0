<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-12 flex flex-col items-center justify-center min-h-[60vh]">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Create Account</h1>

        <% if (errorMessage) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= errorMessage %></span>
            </div>
        <% } %>

        <form action="/signup" method="POST" id="signupForm" class="bg-white">
            <div class="mb-4">
                <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Full Name</label>
                <input type="text" name="name" id="name" required 
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>

            <div class="mb-6">
                <label for="location" class="block text-gray-700 text-sm font-bold mb-2">Location</label>
                <input type="text" name="location" id="location" required 
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>

            <!-- Hidden input for phone verification result -->
            <input type="hidden" name="user_json_url" id="user_json_url">

            <div class="mb-6 text-center">
                <p class="text-gray-600 mb-2 text-sm">Verify your mobile number to register</p>
                
                <!-- Phone.email Configuration -->
                <!-- Phone.email Configuration -->
                <div class="pe_signin_button" data-client-id="11157398436047844963"></div>
                <script src="https://www.phone.email/sign_in_button_v1.js" async></script>
                
                 <!-- Placeholder for dev/testing if script is missing -->
                <div class="mt-2 p-3 border border-dashed border-gray-300 rounded bg-gray-50 text-xs text-gray-500">
                    Phone verification button will appear here.
                </div>
            </div>
            
             <div class="flex items-center justify-center">
                 <button type="submit" id="submitBtn" class="bg-gray-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-not-allowed" disabled>
                    Register
                </button>
            </div>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">Already have an account? <a href="/login" class="text-blue-600 hover:text-blue-800 font-semibold">Login</a></p>
        </div>
    </div>
</main>

<script>
    // Phone.email listener
    function phoneEmailListener(userObj) {
        const user_json_url = userObj.user_json_url;
        
        if (user_json_url) {
            document.getElementById('user_json_url').value = user_json_url;
            
            // Enable submit button
            const btn = document.getElementById('submitBtn');
            btn.classList.remove('bg-gray-400', 'cursor-not-allowed');
            btn.classList.add('bg-blue-600', 'hover:bg-blue-700', 'cursor-pointer');
            btn.disabled = false;
        }
    }
</script>

<%- include('../partials/footer') %>
