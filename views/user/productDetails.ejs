<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <%- include('../partials/header') %>

    <main class="flex-grow py-8 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4">
            
            <!-- Breadcrumb -->
            <nav class="flex mb-6 text-sm text-gray-500">
                <a href="/" class="hover:text-[#0071dc]">Home</a>
                <span class="mx-2">&gt;</span>
                <a href="/<%= product.category %>s" class="hover:text-[#0071dc] capitalize"><%= product.category %>s</a>
                <span class="mx-2">&gt;</span>
                <span class="text-gray-900 font-medium truncate max-w-xs"><%= product.name %></span>
            </nav>

            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 md:p-8">
                <div class="flex flex-col lg:flex-row gap-10">
                    
                    <!-- Left Column: Image Gallery -->
                    <div class="lg:w-1/2 flex flex-col gap-4">
                        <div class="relative w-full aspect-[4/3] rounded-xl overflow-hidden border border-gray-100 bg-white flex items-center justify-center group">
                            <!-- Assurance Badge -->
                            <div class="absolute top-4 left-4 bg-[#0a1e38] text-white text-[10px] font-bold px-3 py-1.5 rounded-full flex items-center gap-1.5 z-10 shadow-sm">
                                <i class="ri-checkbox-circle-fill text-[#0071dc] text-sm"></i> SIMTECH ASSURED
                            </div>
                            <!-- Wishlist Btn -->
                            <button class="absolute top-4 right-4 w-9 h-9 rounded-full bg-gray-50 text-gray-400 hover:text-red-500 hover:bg-red-50 flex items-center justify-center transition-all z-10">
                                <i class="ri-heart-line text-lg"></i>
                            </button>
                            
                            <!-- Main Image -->
                            <img src="<%= optimizeImage(product.image) %>" alt="<%= product.name %>" class="object-contain w-full h-full p-6 transition-transform duration-500 group-hover:scale-105" id="mainImage">
                        </div>

                        <!-- Thumbnails -->
                        <div class="flex gap-3 overflow-x-auto pb-2 scrollbar-hide">
                            <% if (product.images && product.images.length > 0) { %>
                                <% product.images.forEach((img, index) => { %>
                                    <button onclick="changeImage('<%= img %>')" class="w-20 h-20 rounded-lg border-2 <%= index === 0 ? 'border-[#0071dc]' : 'border-gray-200 hover:border-gray-300' %> bg-white p-2 flex-shrink-0 cursor-pointer overflow-hidden transition-all thumbnail-btn">
                                        <img src="<%= optimizeImage(img) %>" class="object-contain w-full h-full">
                                    </button>
                                <% }); %>
                            <% } else { %>
                                <!-- Fallback if no images array (backward compatibility) -->
                                <button class="w-20 h-20 rounded-lg border-2 border-[#0071dc] bg-white p-2 flex-shrink-0 cursor-pointer overflow-hidden">
                                    <img src="<%= optimizeImage(product.image) %>" class="object-contain w-full h-full">
                                </button>
                            <% } %>
                        </div>
                        
                        <!-- Trust Bar -->
                        <div class="bg-black text-white rounded-lg p-3 flex justify-between items-center text-xs md:text-sm font-medium mt-2">
                             <div class="flex items-center gap-2">
                                <span class="bg-white/10 w-8 h-8 rounded flex items-center justify-center font-bold">32</span>
                                <div>Points<br>Quality Check</div>
                             </div>
                             <div class="w-px h-8 bg-white/20"></div>
                             <div class="flex items-center gap-2">
                                <span class="bg-white/10 w-8 h-8 rounded flex items-center justify-center font-bold text-[#00aaff]">7</span>
                                <div>Days<br>Replacement</div>
                             </div>
                             <div class="w-px h-8 bg-white/20"></div>
                             <div class="flex items-center gap-2">
                                <span class="bg-white/10 w-8 h-8 rounded flex items-center justify-center font-bold text-[#00aaff]">06</span>
                                <div>Months<br>Warranty</div>
                             </div>
                        </div>

                        <!-- Description -->
                        <div class="mt-6">
                            <h3 class="font-bold text-gray-900 mb-2">Description</h3>
                            <div class="relative">
                                <p id="productDescription" class="text-gray-600 text-sm leading-relaxed line-clamp-3 transition-all duration-300">
                                    <%= product.description %>
                                </p>
                                <button id="viewMoreBtn" onclick="toggleDescription()" class="text-[#0071dc] text-sm font-bold mt-1 hover:underline focus:outline-none hidden">
                                    View More
                                </button>
                            </div>
                        </div>

                    </div>

                    <!-- Right Column: Product Details -->
                    <div class="lg:w-1/2">
                        <h1 class="text-xl md:text-2xl font-semibold text-gray-900 mb-2 leading-tight"><%= product.name %></h1>


                        <!-- Ratings -->
                        <div class="flex items-center gap-2 mb-6">
                            <span class="bg-[#0071dc] text-white px-2 py-0.5 rounded text-sm font-bold flex items-center gap-1">
                                <%= product.rating %> <i class="ri-star-fill text-[10px]"></i>
                            </span>
                            <span class="text-gray-500 text-sm hover:underline cursor-pointer">4 reviews</span>
                        </div>

                        <!-- Price Section -->
                        <div class="mb-6">
                            <div class="text-red-500 text-xs font-bold uppercase tracking-wider mb-1"><i class="ri-price-tag-3-fill"></i> Online Exclusive Price!</div>
                            <div class="flex items-baseline gap-3">
                                <span class="text-3xl font-bold text-gray-900">₹<%= product.price.toLocaleString('en-IN') %></span>
                                <span class="text-gray-400 text-lg line-through">₹<%= product.mrp.toLocaleString('en-IN') %></span>
                                <span class="text-red-500 font-bold text-lg"><%= product.discount %>% OFF</span>
                            </div>
                        </div>

                        <!-- Extended Warranty Add-on -->
                        <div class="bg-blue-50 border border-blue-100 rounded-lg p-4 flex justify-between items-center mb-8">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-[#0071dc] shadow-sm">
                                    <i class="ri-shield-check-fill text-xl"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900 text-sm">Extended Warranty</h4>
                                    <p class="text-gray-500 text-xs">Add 6 Months for ₹1,499</p>
                                </div>
                            </div>
                            <button class="bg-black text-white text-xs font-bold px-4 py-2 rounded hover:bg-gray-800 transition-colors">Add</button>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex gap-4 mb-10">
                            <% if (product.inStock) { %>
                                <form action="/cart" method="POST" class="flex-1">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button type="submit" class="w-full border-2 border-black text-black font-bold py-3 rounded-lg hover:bg-gray-50 transition-colors flex items-center justify-center gap-2">
                                        <i class="ri-shopping-cart-2-line"></i> Add to Cart
                                    </button>
                                </form>
                                <button class="flex-1 bg-black text-white font-bold py-3 rounded-lg hover:bg-gray-800 transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all">
                                    Buy Now
                                </button>
                            <% } else { %>
                                <button disabled class="flex-1 border-2 border-gray-200 text-gray-400 font-bold py-3 rounded-lg cursor-not-allowed flex items-center justify-center gap-2">
                                    <i class="ri-shopping-cart-2-line"></i> Out of Stock
                                </button>
                                <button disabled class="flex-1 bg-gray-200 text-gray-400 font-bold py-3 rounded-lg cursor-not-allowed">
                                    Buy Now
                                </button>
                            <% } %>
                        </div>

                        <!-- Selection Options (Hidden for now as variants are not implemented) -->
                        <!-- 
                        <div class="space-y-6 mb-10">
                            ...
                        </div> 
                        -->

                        <!-- Technical Specs -->
                        <div>
                            <h3 class="font-bold text-gray-900 mb-4 text-lg">Technical Specifications</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <% if (product.category === 'laptop' || product.category === 'desktop') { %>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Processor</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.processor || 'N/A' %></span>
                                    </div>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">RAM</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.ram || 'N/A' %></span>
                                    </div>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Storage</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.storage || 'N/A' %></span>
                                    </div>
                                    <% if (product.specifications.display) { %>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Display</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.display %></span>
                                    </div>
                                    <% } %>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Operating System</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.os || 'N/A' %></span>
                                    </div>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Graphics</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.graphics || 'Integrated' %></span>
                                    </div>
                                <% } else if (product.category === 'monitor') { %>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Screen Size</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.screenSize || 'N/A' %></span>
                                    </div>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Panel Type</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.panelType || 'N/A' %></span>
                                    </div>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Refresh Rate</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.refreshRate || '60Hz' %></span>
                                    </div>
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Resolution</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.specifications.display || 'N/A' %></span>
                                    </div>
                                <% } else { %>
                                    <!-- Fallback for other categories -->
                                    <div class="bg-gray-50 p-4 rounded-lg col-span-2">
                                        <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Description</span>
                                        <span class="font-bold text-gray-900 text-sm"><%= product.description %></span>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Related Products -->
            <div class="mt-16">
                <div class="flex justify-between items-end mb-8">
                     <h2 class="text-2xl font-bold text-gray-900">Similar Products</h2>
                     <a href="/<%= product.category %>s" class="text-[#0071dc] font-semibold hover:underline flex items-center gap-1 text-sm">
                         View All <i class="ri-arrow-right-line"></i>
                     </a>
                </div>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                    <% relatedProducts.forEach(relProduct => { %>
                     <!-- Reusing Card Component -->
                     <a href="/product/<%= relProduct.slug %>" class="block bg-white rounded-xl border border-gray-200 p-4 hover:shadow-lg transition-all duration-300 relative group cursor-pointer">
                        <div class="flex justify-between items-start mb-4">
                            <div class="bg-black text-white text-[10px] font-bold px-2 py-1.5 rounded-full flex items-center gap-1">
                                    <i class="ri-checkbox-circle-fill text-green-400 text-sm"></i> SIMTECH ASSURED
                            </div>
                            <div class="border border-green-300 text-green-700 text-[10px] font-bold px-2 py-0.5 rounded bg-green-50">
                                -<%= relProduct.discount %>%
                            </div>
                        </div>
                        <div class="h-48 flex items-center justify-center mb-4 relative">
                            <img src="<%= optimizeImage(relProduct.image) %>" alt="<%= relProduct.name %>" class="object-contain h-full w-full group-hover:scale-105 transition-transform duration-500">
                        </div>
                        <h3 class="font-bold text-gray-900 text-base leading-snug mb-3 line-clamp-2"><%= relProduct.name %></h3>
                        
                        <div class="flex items-baseline gap-2 flex-wrap">
                            <span class="text-xl font-bold text-gray-900">₹<%= relProduct.price.toLocaleString('en-IN') %></span>
                            <span class="text-gray-400 text-xs line-through">₹<%= relProduct.mrp.toLocaleString('en-IN') %></span>
                        </div>
                        <% if (relProduct.inStock) { %>
                            <form action="/cart" method="POST">
                                <input type="hidden" name="productId" value="<%= relProduct.id %>">
                                <button type="submit" class="absolute bottom-4 right-4 bg-[#0071dc] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-blue-700 transition-colors shadow-md z-20">
                                    <i class="ri-shopping-cart-2-line"></i>
                                </button>
                            </form>
                        <% } else { %>
                            <button disabled class="absolute bottom-4 right-4 bg-gray-200 text-gray-400 w-8 h-8 rounded-full flex items-center justify-center cursor-not-allowed z-20">
                                <i class="ri-shopping-cart-2-line"></i>
                            </button>
                        <% } %>
                    </a>
                    <% }); %>
                </div>

            </div>

        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        function changeImage(src) {
            const mainImage = document.getElementById('mainImage');
            mainImage.style.opacity = '0';
            setTimeout(() => {
                mainImage.src = src;
                mainImage.style.opacity = '1';
            }, 200);

            // Update active state of thumbnails
            const buttons = document.querySelectorAll('.thumbnail-btn');
            buttons.forEach(btn => {
                if (btn.querySelector('img').src.includes(src)) {
                    btn.classList.add('border-[#0071dc]');
                    btn.classList.remove('border-gray-200', 'hover:border-gray-300');
                } else {
                    btn.classList.remove('border-[#0071dc]');
                    btn.classList.add('border-gray-200', 'hover:border-gray-300');
                }
            });
        }
        function toggleDescription() {
            const desc = document.getElementById('productDescription');
            const btn = document.getElementById('viewMoreBtn');
            
            if (desc.classList.contains('line-clamp-3')) {
                desc.classList.remove('line-clamp-3');
                btn.textContent = 'View Less';
            } else {
                desc.classList.add('line-clamp-3');
                btn.textContent = 'View More';
            }
        }

        // Check if description needs truncation
        document.addEventListener('DOMContentLoaded', () => {
            const desc = document.getElementById('productDescription');
            const btn = document.getElementById('viewMoreBtn');
            
            // Check if content overflows (scrollHeight > clientHeight)
            // Note: line-clamp-3 must be active for this check to work on clamped height
            if (desc.scrollHeight > desc.clientHeight) {
                btn.classList.remove('hidden');
            }
        });
    </script>
</body>
</html>
