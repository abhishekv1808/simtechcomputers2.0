<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <%- include('../partials/header') %>

    <main class="flex-grow py-8 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4">
            
            <!-- Breadcrumb -->
            <nav class="flex mb-6 text-sm text-gray-500">
                <a href="/" class="hover:text-[#0071dc]">Home</a>
                <span class="mx-2">&gt;</span>
                <a href="/<%= product.category %>s" class="hover:text-[#0071dc] capitalize"><%= product.category %>s</a>
                <span class="mx-2">&gt;</span>
                <span class="text-gray-900 font-medium truncate max-w-xs"><%= product.name %></span>
            </nav>

            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 md:p-8">
                <div class="flex flex-col lg:flex-row gap-10">
                    
                    <!-- Left Column: Image Gallery -->
                    <div class="lg:w-1/2 flex flex-col gap-4">
                        <div class="relative w-full aspect-[4/3] rounded-xl overflow-hidden border border-gray-100 bg-white flex items-center justify-center group">
                            <!-- Assurance Badge -->
                            <div class="absolute top-4 left-4 bg-[#0a1e38] text-white text-[10px] font-bold px-3 py-1.5 rounded-full flex items-center gap-1.5 z-10 shadow-sm">
                                <i class="ri-checkbox-circle-fill text-[#0071dc] text-sm"></i> SIMTECH ASSURED
                            </div>
                            <!-- Wishlist Btn -->
                            <button class="absolute top-4 right-4 w-9 h-9 rounded-full bg-gray-50 text-gray-400 hover:text-red-500 hover:bg-red-50 flex items-center justify-center transition-all z-10">
                                <i class="ri-heart-line text-lg"></i>
                            </button>
                            
                            <!-- Main Image -->
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="object-contain w-full h-full p-6 transition-transform duration-500 group-hover:scale-105" id="mainImage">
                        </div>

                        <!-- Thumbnails -->
                        <div class="flex gap-3 overflow-x-auto pb-2 scrollbar-hide">
                            <button class="w-20 h-20 rounded-lg border-2 border-[#0071dc] bg-white p-2 flex-shrink-0 cursor-pointer overflow-hidden">
                                <img src="<%= product.image %>" class="object-contain w-full h-full">
                            </button>
                            <!-- Placeholder Thumbnails (Simulating multiples) -->
                            <button class="w-20 h-20 rounded-lg border border-gray-200 hover:border-gray-300 bg-white p-2 flex-shrink-0 cursor-pointer overflow-hidden opacity-70 hover:opacity-100 transition-all">
                                <img src="<%= product.image %>" class="object-contain w-full h-full">
                            </button>
                            <button class="w-20 h-20 rounded-lg border border-gray-200 hover:border-gray-300 bg-white p-2 flex-shrink-0 cursor-pointer overflow-hidden opacity-70 hover:opacity-100 transition-all">
                                <img src="<%= product.image %>" class="object-contain w-full h-full">
                            </button>
                            <button class="w-20 h-20 rounded-lg border border-gray-200 hover:border-gray-300 bg-white p-2 flex-shrink-0 cursor-pointer overflow-hidden opacity-70 hover:opacity-100 transition-all">
                                <img src="<%= product.image %>" class="object-contain w-full h-full">
                            </button>
                        </div>
                        
                        <!-- Trust Bar -->
                        <div class="bg-black text-white rounded-lg p-3 flex justify-between items-center text-xs md:text-sm font-medium mt-2">
                             <div class="flex items-center gap-2">
                                <span class="bg-white/10 w-8 h-8 rounded flex items-center justify-center font-bold">32</span>
                                <div>Points<br>Quality Check</div>
                             </div>
                             <div class="w-px h-8 bg-white/20"></div>
                             <div class="flex items-center gap-2">
                                <span class="bg-white/10 w-8 h-8 rounded flex items-center justify-center font-bold text-[#00aaff]">7</span>
                                <div>Days<br>Replacement</div>
                             </div>
                             <div class="w-px h-8 bg-white/20"></div>
                             <div class="flex items-center gap-2">
                                <span class="bg-white/10 w-8 h-8 rounded flex items-center justify-center font-bold text-[#00aaff]">06</span>
                                <div>Months<br>Warranty</div>
                             </div>
                        </div>

                    </div>

                    <!-- Right Column: Product Details -->
                    <div class="lg:w-1/2">
                        <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2 leading-tight"><%= product.name %> - Refurbished</h1>
                        <p class="text-gray-500 text-sm mb-4">Simtech Computers Warranty. Good Condition. / 512GB NVME</p>

                        <!-- Ratings -->
                        <div class="flex items-center gap-2 mb-6">
                            <span class="bg-[#0071dc] text-white px-2 py-0.5 rounded text-sm font-bold flex items-center gap-1">
                                <%= product.rating %> <i class="ri-star-fill text-[10px]"></i>
                            </span>
                            <span class="text-gray-500 text-sm hover:underline cursor-pointer">4 reviews</span>
                        </div>

                        <!-- Price Section -->
                        <div class="mb-6">
                            <div class="text-red-500 text-xs font-bold uppercase tracking-wider mb-1"><i class="ri-price-tag-3-fill"></i> Online Exclusive Price!</div>
                            <div class="flex items-baseline gap-3">
                                <span class="text-3xl font-bold text-gray-900">₹<%= product.price.toLocaleString('en-IN') %></span>
                                <span class="text-gray-400 text-lg line-through">₹<%= product.mrp.toLocaleString('en-IN') %></span>
                                <span class="text-red-500 font-bold text-lg"><%= product.discount %>% OFF</span>
                            </div>
                        </div>

                        <!-- Extended Warranty Add-on -->
                        <div class="bg-blue-50 border border-blue-100 rounded-lg p-4 flex justify-between items-center mb-8">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-[#0071dc] shadow-sm">
                                    <i class="ri-shield-check-fill text-xl"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900 text-sm">Extended Warranty</h4>
                                    <p class="text-gray-500 text-xs">Add 6 Months for ₹1,499</p>
                                </div>
                            </div>
                            <button class="bg-black text-white text-xs font-bold px-4 py-2 rounded hover:bg-gray-800 transition-colors">Add</button>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex gap-4 mb-10">
                            <button class="flex-1 border-2 border-black text-black font-bold py-3 rounded-lg hover:bg-gray-50 transition-colors flex items-center justify-center gap-2">
                                <i class="ri-shopping-cart-2-line"></i> Add to Cart
                            </button>
                            <button class="flex-1 bg-black text-white font-bold py-3 rounded-lg hover:bg-gray-800 transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all">
                                Buy Now
                            </button>
                        </div>

                        <!-- Selection Options -->
                        <div class="space-y-6 mb-10">
                            <!-- Condition -->
                            <div>
                                <h3 class="font-bold text-gray-900 mb-2">Condition</h3>
                                <div class="flex gap-3">
                                    <button class="px-6 py-2 rounded-lg border border-gray-200 text-gray-400 hover:border-gray-300 transition-colors">Fair</button>
                                    <button class="px-6 py-2 rounded-lg border-2 border-[#00aaff] text-[#00aaff] font-bold bg-blue-50 relative">
                                        Good
                                        <div class="absolute -top-2 -right-2 bg-[#00aaff] text-white rounded-full w-5 h-5 flex items-center justify-center border-2 border-white"><i class="ri-check-line text-xs"></i></div>
                                    </button>
                                    <button class="px-6 py-2 rounded-lg border border-gray-200 text-gray-600 hover:border-gray-400 transition-colors">Superb</button>
                                </div>
                            </div>

                            <!-- Storage -->
                            <div>
                                <h3 class="font-bold text-gray-900 mb-2">Storage</h3>
                                <div class="flex gap-3">
                                    <button class="px-6 py-2 rounded-lg border-2 border-[#00aaff] text-[#00aaff] font-bold bg-blue-50">512GB NVME</button>
                                    <button class="px-6 py-2 rounded-lg border border-gray-200 text-gray-600 hover:border-gray-400 transition-colors">1TB NVME</button>
                                </div>
                            </div>

                             <!-- Operating System -->
                             <div>
                                <h3 class="font-bold text-gray-900 mb-2">Operating System</h3>
                                <div class="flex gap-3">
                                    <button class="px-6 py-2 rounded-lg border-2 border-[#00aaff] text-[#00aaff] font-bold bg-blue-50">Windows 11 Pro</button>
                                </div>
                            </div>
                        </div>

                        <!-- Technical Specs -->
                        <div>
                            <h3 class="font-bold text-gray-900 mb-4 text-lg">Technical Specifications</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Processor</span>
                                    <span class="font-bold text-gray-900 text-sm">Intel Core i5 / i7 / M1</span>
                                </div>
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">RAM</span>
                                    <span class="font-bold text-gray-900 text-sm">8GB / 16GB</span>
                                </div>
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Storage</span>
                                    <span class="font-bold text-gray-900 text-sm">256GB / 512GB SSD</span>
                                </div>
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Display</span>
                                    <span class="font-bold text-gray-900 text-sm">13.3" / 14" / 15.6" FHD</span>
                                </div>
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Operating System</span>
                                    <span class="font-bold text-gray-900 text-sm">Windows 10 / 11 Pro</span>
                                </div>
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <span class="text-xs text-gray-500 uppercase tracking-wide block mb-1">Graphics</span>
                                    <span class="font-bold text-gray-900 text-sm">Intel Iris Xe / Integrated</span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Related Products -->
            <div class="mt-16">
                <div class="flex justify-between items-end mb-8">
                     <h2 class="text-2xl font-bold text-gray-900">Similar Products</h2>
                     <a href="/<%= product.category %>s" class="text-[#0071dc] font-semibold hover:underline flex items-center gap-1 text-sm">
                         View All <i class="ri-arrow-right-line"></i>
                     </a>
                </div>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                    <% relatedProducts.forEach(relProduct => { %>
                     <!-- Reusing Card Component -->
                     <a href="/product/<%= relProduct.id %>" class="block bg-white rounded-xl border border-gray-200 p-4 hover:shadow-lg transition-all duration-300 relative group cursor-pointer">
                        <div class="flex justify-between items-start mb-4">
                            <div class="bg-black text-white text-[10px] font-bold px-2 py-1.5 rounded-full flex items-center gap-1">
                                    <i class="ri-checkbox-circle-fill text-green-400 text-sm"></i> SIMTECH ASSURED
                            </div>
                            <div class="border border-green-300 text-green-700 text-[10px] font-bold px-2 py-0.5 rounded bg-green-50">
                                -<%= relProduct.discount %>%
                            </div>
                        </div>
                        <div class="h-48 flex items-center justify-center mb-4 relative">
                            <img src="<%= relProduct.image %>" alt="<%= relProduct.name %>" class="object-contain h-full w-full group-hover:scale-105 transition-transform duration-500">
                        </div>
                        <h3 class="font-bold text-gray-900 text-base leading-snug mb-3 line-clamp-2"><%= relProduct.name %></h3>
                        
                        <div class="flex items-baseline gap-2 flex-wrap">
                            <span class="text-xl font-bold text-gray-900">₹<%= relProduct.price.toLocaleString('en-IN') %></span>
                            <span class="text-gray-400 text-xs line-through">₹<%= relProduct.mrp.toLocaleString('en-IN') %></span>
                        </div>
                         <button class="absolute bottom-4 right-4 bg-[#0071dc] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-blue-700 transition-colors shadow-md z-20">
                            <i class="ri-shopping-cart-2-line"></i>
                        </button>
                    </a>
                    <% }); %>
                </div>

            </div>

        </div>
    </main>

    <%- include('../partials/footer') %>

</body>
</html>
