<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>

    <main class="pt-8 pb-16">
        <!-- Hero Section -->
        <article class="max-w-4xl mx-auto px-4">
            
            <!-- Breadcrumbs -->
            <nav class="flex text-sm text-gray-500 mb-6">
                <a href="/" class="hover:text-[#a51c30]">Home</a>
                <span class="mx-2">/</span>
                <span class="text-gray-900 font-semibold truncate"><%= blog.title %></span>
            </nav>

            <!-- Blog Header -->
            <header class="mb-10 text-center">
                 <span class="inline-block px-3 py-1 bg-red-100 text-[#a51c30] rounded-full text-xs font-bold tracking-wide uppercase mb-4">
                    Tech Insights
                </span>
                <h1 class="text-3xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
                    <%= blog.title %>
                </h1>
                
                <div class="flex items-center justify-center gap-4 text-sm text-gray-500">
                    <div class="flex items-center gap-2">
                         <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center text-gray-600">
                            <i class="ri-user-smile-line"></i>
                        </div>
                        <span class="font-medium text-gray-900"><%= blog.author %></span>
                    </div>
                    <span>â€¢</span>
                    <div class="flex items-center gap-2">
                        <i class="ri-calendar-line"></i>
                        <time datetime="<%= blog.date.toISOString() %>">
                            <%= new Date(blog.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                        </time>
                    </div>
                </div>
            </header>

            <!-- Featured Image -->
            <div class="relative w-full h-[400px] md:h-[500px] mb-12 rounded-2xl overflow-hidden shadow-2xl">
                <img src="<%= blog.image %>" alt="<%= blog.title %>" class="w-full h-full object-cover">
                 <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>

            <!-- Content -->
            <div class="prose prose-lg md:prose-xl max-w-none text-gray-700 leading-relaxed">
                <!-- In a real app, you might want to sanitize this if it comes from user input, but since we seed it, it's safe -->
                <%- blog.content %>
            </div>

            <!-- Share -->
            <div class="border-t border-gray-200 mt-12 pt-8 flex items-center justify-between">
                <h4 class="font-bold text-gray-900">Share this article:</h4>
                <div class="flex gap-4">
                    <a href="#" class="w-10 h-10 rounded-full bg-red-600 text-white flex items-center justify-center hover:bg-red-700 transition-colors">
                        <i class="ri-facebook-fill"></i>
                    </a>
                    <a href="#" class="w-10 h-10 rounded-full bg-sky-500 text-white flex items-center justify-center hover:bg-sky-600 transition-colors">
                        <i class="ri-twitter-x-line"></i>
                    </a>
                    <a href="#" class="w-10 h-10 rounded-full bg-green-500 text-white flex items-center justify-center hover:bg-green-600 transition-colors">
                        <i class="ri-whatsapp-line"></i>
                    </a>
                </div>
            </div>

        </article>

        <!-- Related Blogs -->
        <% if (relatedBlogs && relatedBlogs.length > 0) { %>
        <section class="max-w-6xl mx-auto px-4 mt-20">
            <div class="flex items-center gap-2 mb-8">
                 <h3 class="text-2xl font-bold text-gray-900">Read Next</h3>
                 <div class="h-px bg-gray-200 flex-grow"></div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <% relatedBlogs.forEach(blog => { %>
                <a href="/blog/<%= blog._id %>" class="group block">
                    <div class="rounded-xl overflow-hidden mb-4 relative aspect-[16/9]">
                        <img src="<%= blog.image %>" alt="<%= blog.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                    </div>
                    <div class="flex items-center gap-2 text-xs text-gray-500 mb-2">
                        <span><%= new Date(blog.date).toLocaleDateString() %></span>
                    </div>
                    <h4 class="font-bold text-gray-900 text-lg group-hover:text-[#a51c30] transition-colors line-clamp-2">
                        <%= blog.title %>
                    </h4>
                </a>
                <% }) %>
            </div>
        </section>
        <% } %>

    </main>

    <%- include('../partials/footer') %>
</body>
</html>
