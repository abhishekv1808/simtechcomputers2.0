<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <%- include('../partials/header') %>

    <main class="flex-grow pt-8 pb-12">
        <div class="max-w-7xl mx-auto px-4">
            
            <!-- Breadcrumb -->
            <nav class="flex mb-8 text-sm text-gray-500">
                <a href="/" class="hover:text-[#a51c30]">Home</a>
                <span class="mx-2">/</span>
                <span class="text-gray-900 font-medium">Desktops</span>
            </nav>

            <!-- Hero Section -->
            <% 
            const brandConfig = {
                'Apple': {
                    gradient: 'linear-gradient(135deg, #1E0B36 0%, #102B7B 45%, #04D0D9 100%)',
                    title: 'iMac & Mac Mini',
                    subtitle: 'Powerfully Simple.',
                    desc: 'Transform your workspace with the ultimate all-in-one desktop experience.',
                    image: '/images/hero-desktops.png',
                    badge: 'Premium Desktop',
                    textGradient: 'from-red-400 to-purple-400'
                },
                'Dell': {
                    gradient: 'linear-gradient(135deg, #021B35 0%, #004E8F 50%, #007DB8 100%)',
                    title: 'Dell OptiPlex & Inspiron',
                    subtitle: 'Productivity Powerhouse.',
                    desc: 'Reliable performance for home and office. Built to last.',
                    image: '/images/hero-desktops.png',
                    badge: 'Business Ready',
                    textGradient: 'from-cyan-300 to-red-200'
                },
                'HP': {
                    gradient: 'linear-gradient(135deg, #002D3A 0%, #006D85 50%, #00A6C7 100%)',
                    title: 'HP EliteDesk & Pavilion',
                    subtitle: 'Engineered for Excellence.',
                    desc: 'Sleek designs with powerful performance for every task.',
                    image: '/images/hero-desktops.png',
                    badge: 'Elite Performance',
                    textGradient: 'from-teal-300 to-emerald-200'
                },
                'Lenovo': {
                    gradient: 'linear-gradient(135deg, #2D0F0F 0%, #881212 50%, #E22B2B 100%)',
                    title: 'Lenovo ThinkCentre',
                    subtitle: 'Tiny Footprint, Big Performance.',
                    desc: 'Compact and powerful desktops designed for modern workspaces.',
                    image: '/images/hero-desktops.png',
                    badge: 'Pro Series',
                    textGradient: 'from-red-400 to-orange-300'
                },
                'Default': {
                    gradient: 'linear-gradient(135deg, #0F2027 0%, #203A43 50%, #2C5364 100%)',
                    title: 'Premium Used Desktops',
                    subtitle: 'Performance for Every Need.',
                    desc: 'Discover our wide range of certified refurbished desktops from top brands like Dell, HP, and Lenovo.',
                    image: '/images/hero-desktops.png',
                    badge: 'Simtech Assured',
                    textGradient: 'from-red-300 to-cyan-300'
                }
            };

            const config = (typeof currentBrand !== 'undefined' && brandConfig[currentBrand]) ? brandConfig[currentBrand] : brandConfig['Default'];
            %>

            <% if (config) { %>
                <div class="mb-8 relative rounded-2xl overflow-hidden shadow-2xl min-h-[250px] md:min-h-[280px] grid grid-cols-1 md:grid-cols-2 items-center" style="background: <%= config.gradient %>;">
                    <!-- Subtle Noise Overlay for Texture -->
                    <div class="absolute inset-0 opacity-10 mix-blend-overlay pointer-events-none" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg')"></div>

                     <!-- Text Content (Left Column) -->
                    <div class="p-8 md:pl-12 text-left relative z-20">
                        <span class="inline-block px-3 py-1 rounded-full bg-white text-gray-900 text-[10px] font-bold tracking-widest uppercase mb-3 shadow-lg">
                            <%= config.badge %>
                        </span>
                        <h1 class="text-3xl md:text-5xl font-bold text-white leading-tight mb-3 tracking-tight">
                            <%= config.title %>
                        </h1>
                        <p class="text-xl md:text-2xl font-light text-gray-300 mb-4">
                            <span class="bg-gradient-to-r <%= config.textGradient %> bg-clip-text text-transparent font-medium"><%= config.subtitle %></span>
                        </p>
                        <p class="text-gray-400 text-sm md:text-base max-w-md leading-relaxed">
                            <%= config.desc %>
                        </p>
                    </div>

                     <!-- Image (Right Column) -->
                    <div class="h-full w-full flex items-end justify-center md:justify-end relative z-10 pr-0 md:pr-12 pb-0">
                        <img src="<%= config.image %>" alt="<%= config.title %>" class="object-contain h-64 w-auto drop-shadow-2xl translate-y-2">
                    </div>
                </div>
            <% } %>

            <div class="flex flex-col lg:flex-row gap-8">
                
                <!-- Sidebar Filters -->
                <aside class="lg:w-1/4 flex-shrink-0">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-24">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-lg font-bold text-gray-900">Filters</h2>
                            <h2 class="text-lg font-bold text-gray-900">Filters</h2>
                            <a href="/desktops" class="text-sm text-[#a51c30] hover:underline">Clear All</a>
                        </div>

                        <!-- Price Range -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Price</h3>
                            <div class="space-y-2">
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="Under ₹25,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('Under ₹25,000') : currentFilters.price === 'Under ₹25,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Under ₹25,000</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="₹25,000 - ₹50,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('₹25,000 - ₹50,000') : currentFilters.price === '₹25,000 - ₹50,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">₹25,000 - ₹50,000</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="₹50,000 - ₹80,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('₹50,000 - ₹80,000') : currentFilters.price === '₹50,000 - ₹80,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">₹50,000 - ₹80,000</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="price" value="Above ₹80,000" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.price && (Array.isArray(currentFilters.price) ? currentFilters.price.includes('Above ₹80,000') : currentFilters.price === 'Above ₹80,000') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Above ₹80,000</span>
                                </label>
                            </div>
                        </div>

                        <!-- Brand -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Brand</h3>
                            <div class="space-y-2">
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="Apple" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('Apple') : currentFilters.brand === 'Apple') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Apple</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="Dell" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('Dell') : currentFilters.brand === 'Dell') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Dell</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="HP" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('HP') : currentFilters.brand === 'HP') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">HP</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="brand" value="Lenovo" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.brand && (Array.isArray(currentFilters.brand) ? currentFilters.brand.includes('Lenovo') : currentFilters.brand === 'Lenovo') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Lenovo</span>
                                </label>
                            </div>
                        </div>

                        <!-- Form Factor -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Form Factor</h3>
                            <div class="space-y-2">
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="formFactor" value="All-in-One (AIO)" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.formFactor && (Array.isArray(currentFilters.formFactor) ? currentFilters.formFactor.includes('All-in-One (AIO)') : currentFilters.formFactor === 'All-in-One (AIO)') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">All-in-One (AIO)</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="formFactor" value="Tower Desktop" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.formFactor && (Array.isArray(currentFilters.formFactor) ? currentFilters.formFactor.includes('Tower Desktop') : currentFilters.formFactor === 'Tower Desktop') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Tower Desktop</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="formFactor" value="Mini PC" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.formFactor && (Array.isArray(currentFilters.formFactor) ? currentFilters.formFactor.includes('Mini PC') : currentFilters.formFactor === 'Mini PC') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Mini PC</span>
                                </label>
                            </div>
                        </div>

                        <!-- Processor -->
                        <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">Processor</h3>
                            <div class="space-y-2">
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="processor" value="Intel Core i5" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.processor && (Array.isArray(currentFilters.processor) ? currentFilters.processor.includes('Intel Core i5') : currentFilters.processor === 'Intel Core i5') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Intel Core i5</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="processor" value="Intel Core i7" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.processor && (Array.isArray(currentFilters.processor) ? currentFilters.processor.includes('Intel Core i7') : currentFilters.processor === 'Intel Core i7') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Intel Core i7</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="processor" value="Apple M1/M2" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.processor && (Array.isArray(currentFilters.processor) ? currentFilters.processor.includes('Apple M1/M2') : currentFilters.processor === 'Apple M1/M2') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">Apple M1/M2</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="processor" value="AMD Ryzen" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.processor && (Array.isArray(currentFilters.processor) ? currentFilters.processor.includes('AMD Ryzen') : currentFilters.processor === 'AMD Ryzen') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">AMD Ryzen</span>
                                </label>
                            </div>
                        </div>

                         <!-- RAM -->
                         <div class="mb-6 border-b border-gray-100 pb-6">
                            <h3 class="font-semibold text-gray-900 mb-3">RAM</h3>
                            <div class="space-y-2">
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="ram" value="8GB" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.ram && (Array.isArray(currentFilters.ram) ? currentFilters.ram.includes('8GB') : currentFilters.ram === '8GB') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">8GB</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="ram" value="16GB" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.ram && (Array.isArray(currentFilters.ram) ? currentFilters.ram.includes('16GB') : currentFilters.ram === '16GB') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">16GB</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="ram" value="32GB+" class="rounded border-gray-300 text-[#a51c30] focus:ring-red-100" <%= currentFilters.ram && (Array.isArray(currentFilters.ram) ? currentFilters.ram.includes('32GB+') : currentFilters.ram === '32GB+') ? 'checked' : '' %> onchange="applyFilters()">
                                    <span class="text-sm text-gray-600">32GB+</span>
                                </label>
                            </div>
                        </div>

                    </div>
                </aside>

                <!-- Product Grid -->
                <div class="lg:w-3/4 flex flex-col min-h-[600px]">
                    
                    <!-- Header -->
                    <div class="flex justify-between items-center mb-6">
                        <h1 class="text-2xl font-bold text-gray-900"><%= currentBrand !== 'All' ? 'Used ' + currentBrand + ' Desktops' : 'All Desktops' %> <span class="text-gray-500 text-lg font-normal ml-2">(<%= products.length %> items)</span></h1>
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-gray-600">Sort by:</span>
                            <select class="border border-gray-300 rounded-lg px-3 py-1.5 text-sm outline-none focus:border-[#a51c30]">
                                <option>Featured</option>
                                <option>Price: Low to High</option>
                                <option>Price: High to Low</option>
                                <option>Newest Arrivals</option>
                            </select>
                        </div>
                    </div>

                    <!-- Grid -->
                    <!-- Grid -->
                    <% if (products.length > 0) { %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% products.forEach(product => { %>
                        <div class="bg-white rounded-xl border border-gray-200 p-4 hover:shadow-lg transition-all duration-300 relative group">
                            <a href="/product/<%= product.slug %>" class="block">
                                <div class="flex justify-between items-start mb-4">
                                    <div class="bg-black text-white text-[10px] font-bold px-2 py-1.5 rounded-full flex items-center gap-1">
                                         <i class="ri-checkbox-circle-fill text-green-400 text-sm"></i> SIMTECH ASSURED
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <div class="border border-green-300 text-green-700 text-[10px] font-bold px-2 py-0.5 rounded bg-green-50">
                                            -<%= product.discount %>%
                                        </div>
                                        <button onclick="event.preventDefault(); shareProduct('<%= product.name %>', '/product/<%= product.slug %>')" class="text-gray-400 hover:text-[#a51c30] transition-colors z-20">
                                            <i class="ri-share-forward-line text-lg"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="h-48 flex items-center justify-center mb-4 relative">
                                    <img src="<%= optimizeImage(product.image) %>" alt="<%= product.name %>" class="object-contain h-full w-full group-hover:scale-105 transition-transform duration-500">
                                </div>
                                <h3 class="font-bold text-gray-900 text-base leading-snug mb-3 line-clamp-2"><%= product.name %></h3>
                                <div class="flex items-center gap-2 mb-4">
                                    <span class="bg-red-700 text-white text-[10px] font-bold px-2 py-1 rounded">Best Price Guaranteed</span>
                                    <div class="flex items-center gap-1 border border-gray-200 px-1.5 py-0.5 rounded textxs font-bold text-gray-700 bg-gray-50">
                                        <%= product.rating %> <i class="ri-star-fill text-yellow-400 text-[10px]"></i>
                                    </div>
                                </div>
                                <div class="flex items-baseline gap-2 flex-wrap">
                                    <span class="text-xl font-bold text-gray-900">₹<%= product.price.toLocaleString('en-IN') %></span>
                                    <span class="text-gray-400 text-xs line-through">₹<%= product.mrp.toLocaleString('en-IN') %></span>
                                </div>
                            </a>
                            <% if (product.inStock) { %>
                                <% if (isAuthenticated) { %>
                                    <form action="/cart" method="POST">
                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                        <button type="submit" class="absolute bottom-4 right-4 bg-[#a51c30] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-red-700 transition-colors shadow-md z-20">
                                            <i class="ri-shopping-cart-2-line"></i>
                                        </button>
                                    </form>
                                <% } else { %>
                                    <button type="button" onclick="showLoginModal()" class="absolute bottom-4 right-4 bg-[#a51c30] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-red-700 transition-colors shadow-md z-20">
                                        <i class="ri-shopping-cart-2-line"></i>
                                    </button>
                                <% } %>
                            <% } else { %>
                                <button disabled class="absolute bottom-4 right-4 bg-gray-200 text-gray-400 w-8 h-8 rounded-full flex items-center justify-center cursor-not-allowed z-20">
                                    <i class="ri-shopping-cart-2-line"></i>
                                </button>
                            <% } %>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                        <div class="w-full text-center py-12 text-gray-500 bg-gray-50 rounded-xl border border-dashed border-gray-300">
                            <p class="text-lg">There are no desktops at the moment.</p>
                        </div>
                    <% } %>

                    <!-- Pagination -->
                    <div class="flex justify-center mt-auto pt-12">
                        <nav class="flex gap-2">
                             <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">
                                <i class="ri-arrow-left-s-line"></i>
                            </a>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center bg-[#a51c30] text-white font-bold">1</a>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">2</a>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">3</a>
                            <span class="w-10 h-10 flex items-center justify-center text-gray-400">...</span>
                            <a href="#" class="w-10 h-10 rounded-lg flex items-center justify-center border border-gray-300 text-gray-600 hover:bg-gray-50">
                                <i class="ri-arrow-right-s-line"></i>
                            </a>
                        </nav>
                    </div>

                </div>
            </div>
            <!-- You May Also Like Section -->
            <div class="mt-20">
                <div class="flex justify-between items-end mb-8">
                    <h2 class="text-2xl font-bold text-gray-900">You May Also Like</h2>
                    <a href="#" class="text-[#a51c30] font-semibold hover:underline flex items-center gap-1 text-sm">
                        View All <i class="ri-arrow-right-line"></i>
                    </a>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                    <% products.slice(0, 4).reverse().forEach(product => { %>
                    <div class="bg-white rounded-xl border border-gray-200 p-4 hover:shadow-lg transition-all duration-300 relative group cursor-pointer">
                        <div class="flex justify-between items-start mb-4">
                            <div class="bg-black text-white text-[10px] font-bold px-2 py-1.5 rounded-full flex items-center gap-1">
                                    <i class="ri-checkbox-circle-fill text-green-400 text-sm"></i> SIMTECH ASSURED
                            </div>
                            <div class="border border-green-300 text-green-700 text-[10px] font-bold px-2 py-0.5 rounded bg-green-50">
                                -<%= product.discount %>%
                            </div>
                        </div>
                        <div class="h-48 flex items-center justify-center mb-4 relative">
                            <img src="<%= optimizeImage(product.image) %>" alt="<%= product.name %>" class="object-contain h-full w-full group-hover:scale-105 transition-transform duration-500">
                        </div>
                        <h3 class="font-bold text-gray-900 text-base leading-snug mb-3 line-clamp-2"><%= product.name %></h3>
                        <div class="flex items-center gap-2 mb-4">
                            <span class="bg-red-700 text-white text-[10px] font-bold px-2 py-1 rounded">Best Price Guaranteed</span>
                            <div class="flex items-center gap-1 border border-gray-200 px-1.5 py-0.5 rounded textxs font-bold text-gray-700 bg-gray-50">
                                <%= product.rating %> <i class="ri-star-fill text-yellow-400 text-[10px]"></i>
                            </div>
                        </div>
                        <div class="flex items-baseline gap-2 flex-wrap">
                            <span class="text-xl font-bold text-gray-900">₹<%= product.price.toLocaleString('en-IN') %></span>
                            <span class="text-gray-400 text-xs line-through">₹<%= product.mrp.toLocaleString('en-IN') %></span>
                        </div>
                        <% if (product.inStock) { %>
                            <% if (isAuthenticated) { %>
                                <form action="/cart" method="POST">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button type="submit" class="absolute bottom-4 right-4 bg-[#a51c30] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-red-700 transition-colors shadow-md">
                                        <i class="ri-shopping-cart-2-line"></i>
                                    </button>
                                </form>
                            <% } else { %>
                                <button type="button" onclick="showLoginModal()" class="absolute bottom-4 right-4 bg-[#a51c30] text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-red-700 transition-colors shadow-md">
                                    <i class="ri-shopping-cart-2-line"></i>
                                </button>
                            <% } %>
                        <% } else { %>
                            <button disabled class="absolute bottom-4 right-4 bg-gray-200 text-gray-400 w-8 h-8 rounded-full flex items-center justify-center cursor-not-allowed">
                                <i class="ri-shopping-cart-2-line"></i>
                            </button>
                        <% } %>
                    </div>
                    <% }); %>
                </div>
            </div>

        </div>
