<header
  class="flex items-center justify-between px-8 py-6 sticky top-0 z-20 bg-[var(--admin-bg)]/95 backdrop-blur-sm transition-colors duration-300"
>
  <!-- Search -->
  <div class="relative w-96">
    <i
      class="ri-search-line absolute left-4 top-1/2 -translate-y-1/2 text-[var(--admin-text-muted)]"
    ></i>
    <input
      type="text"
      placeholder="Search something..."
      class="w-full bg-[var(--admin-card)] border border-[var(--admin-border)] text-sm text-[var(--admin-text-main)] rounded-xl pl-12 pr-20 py-3 focus:outline-none focus:border-blue-500 transition-colors"
    />
    <button
      class="absolute right-2 top-1/2 -translate-y-1/2 bg-[var(--admin-hover)] hover:bg-gray-200 text-[var(--admin-text-muted)] text-xs font-bold px-3 py-1.5 rounded-lg transition-colors"
    >
      Search
    </button>
  </div>

  <!-- Right Actions -->
  <div class="flex items-center gap-4">
    <div
      class="flex items-center gap-2 bg-[var(--admin-card)] border border-[var(--admin-border)] rounded-full px-2 py-1"
    >
      <button
        class="w-8 h-8 rounded-full hover:bg-[var(--admin-hover)] flex items-center justify-center text-[var(--admin-text-muted)] transition-colors"
      >
        <i class="ri-notification-3-line"></i>
      </button>
      <button
        class="w-8 h-8 rounded-full hover:bg-[var(--admin-hover)] flex items-center justify-center text-[var(--admin-text-muted)] transition-colors"
      >
        <i class="ri-chat-3-line"></i>
      </button>
      <button
        class="w-8 h-8 rounded-full hover:bg-[var(--admin-hover)] flex items-center justify-center text-[var(--admin-text-muted)] transition-colors"
      >
        <i class="ri-settings-4-line"></i>
      </button>
    </div>
  </div>
</header>
