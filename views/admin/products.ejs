<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-[var(--admin-bg)] flex font-sans antialiased text-[var(--admin-text-main)] h-screen overflow-hidden selection:bg-purple-500 selection:text-white transition-colors duration-300">

    <%- include('./includes/navigation') %>

    <main class="flex-grow h-screen overflow-y-auto">
        <!-- Header -->
        <header class="bg-[var(--admin-bg)]/95 backdrop-blur-sm h-16 flex items-center justify-between px-8 sticky top-0 z-20 transition-colors duration-300">
            <h2 class="text-xl font-bold text-[var(--admin-text-main)]">Inventory Management</h2>
            <a href="/admin/add-product" class="bg-[#0071dc] hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-bold flex items-center gap-2 transition-colors">
                <i class="ri-add-line"></i> Add Product
            </a>
        </header>

        <div class="p-8">
            
            <div class="bg-[var(--admin-card)] rounded-xl border border-[var(--admin-border)] overflow-hidden shadow-lg">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="text-[var(--admin-text-muted)] text-xs uppercase tracking-wider border-b border-[var(--admin-border)]">
                                <th class="p-4 font-bold">Product</th>
                                <th class="p-4 font-bold">Category</th>
                                <th class="p-4 font-bold">Price</th>
                                <th class="p-4 font-bold">Stock</th>
                                <th class="p-4 font-bold text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-[var(--admin-border)] text-sm">
                            <% if (products.length > 0) { %>
                                <% products.forEach(product => { %>
                                <tr class="hover:bg-[var(--admin-hover)] transition-colors">
                                    <td class="p-4">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 rounded bg-white border border-gray-200 p-1 flex-shrink-0">
                                                <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-full object-contain">
                                            </div>
                                            <div>
                                                <div class="font-bold text-[var(--admin-text-main)] truncate max-w-[200px]"><%= product.name %></div>
                                                <div class="text-[var(--admin-text-muted)] text-xs"><%= product.brand %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-4 text-[var(--admin-text-muted)] capitalize"><%= product.category %></td>
                                    <td class="p-4 text-[var(--admin-text-main)]">
                                        <div>₹<%= product.price.toLocaleString('en-IN') %></div>
                                        <div class="text-xs text-[var(--admin-text-muted)] line-through">₹<%= product.mrp.toLocaleString('en-IN') %></div>
                                    </td>
                                    <td class="p-4">
                                        <% if (product.inStock) { %>
                                            <span class="bg-green-500/10 text-green-500 px-2 py-1 rounded text-xs font-bold border border-green-500/20">In Stock</span>
                                            <div class="text-xs text-[var(--admin-text-muted)] mt-1"><%= product.quantity %> units</div>
                                        <% } else { %>
                                            <span class="bg-red-500/10 text-red-500 px-2 py-1 rounded text-xs font-bold border border-red-500/20">Out of Stock</span>
                                        <% } %>
                                    </td>
                                    <td class="p-4 text-right">
                                        <div class="flex items-center justify-end gap-2">
                                            <a href="/admin/edit-product/<%= product._id %>?edit=true" class="w-8 h-8 rounded bg-[var(--admin-hover)] hover:bg-blue-600 text-[var(--admin-text-muted)] hover:text-white flex items-center justify-center transition-all" title="Edit">
                                                <i class="ri-pencil-line"></i>
                                            </a>
                                            <form action="/admin/delete-product" method="POST" onsubmit="return confirm('Are you sure?');">
                                                <input type="hidden" name="productId" value="<%= product._id %>">
                                                <button type="submit" class="w-8 h-8 rounded bg-[var(--admin-hover)] hover:bg-red-600 text-[var(--admin-text-muted)] hover:text-white flex items-center justify-center transition-all" title="Delete">
                                                    <i class="ri-delete-bin-line"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="p-8 text-center text-[var(--admin-text-muted)]">No products found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </main>
</body>
</html>
