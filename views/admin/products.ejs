<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-[var(--admin-bg)] flex font-sans antialiased text-[var(--admin-text-main)] h-screen overflow-hidden selection:bg-blue-500 selection:text-white transition-colors duration-300">

    <%- include('./includes/navigation') %>

    <main class="flex-grow h-screen overflow-y-auto">
        <!-- Header -->
        <header class="bg-[var(--admin-bg)]/95 backdrop-blur-sm h-16 flex items-center justify-between px-8 sticky top-0 z-20 transition-colors duration-300">
            <h2 class="text-xl font-bold text-[var(--admin-text-main)]">Inventory Management</h2>
            <a href="/admin/add-product" class="bg-[#0071dc] hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-bold flex items-center gap-2 transition-colors">
                <i class="ri-add-line"></i> Add Product
            </a>
        </header>

        <div class="p-8">
            
            <div class="bg-[var(--admin-card)] rounded-2xl border border-[var(--admin-border)] overflow-hidden shadow-xl">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-[var(--admin-bg)]/50 text-[var(--admin-text-muted)] text-xs uppercase tracking-wider border-b border-[var(--admin-border)]">
                                <th class="p-5 font-bold">Product</th>
                                <th class="p-5 font-bold">Category</th>
                                <th class="p-5 font-bold">Price</th>
                                <th class="p-5 font-bold">Stock Level</th>
                                <th class="p-5 font-bold">Status</th>
                                <th class="p-5 font-bold text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-[var(--admin-border)] text-sm">
                            <% if (products.length > 0) { %>
                                <% products.forEach(product => { %>
                                <tr class="group hover:bg-[var(--admin-hover)] transition-colors duration-200">
                                    <td class="p-5">
                                        <div class="flex items-center gap-4">
                                            <div class="w-38 h-38 rounded-lg bg-white border border-gray-200 p-1 flex-shrink-0 flex items-center justify-center shadow-sm">
                                                <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-full object-cover">
                                            </div>
                                            <div>
                                                <div class="font-bold text-[var(--admin-text-main)] group-hover:text-blue-600 transition-colors mb-1"><%= product.name %></div>
                                                <div class="text-[var(--admin-text-muted)] text-xs mb-2"><%= product.brand %></div>
                                                <div class="flex flex-wrap gap-1">
                                                    <% if (product.specifications) { %>
                                                        <% Object.values(product.specifications).filter(val => val).slice(0, 3).forEach(spec => { %>
                                                            <span class="px-1.5 py-0.5 rounded text-[10px] bg-gray-100 text-gray-600 border border-gray-200 truncate max-w-[100px]"><%= spec %></span>
                                                        <% }) %>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-5">
                                        <span class="px-3 py-1 rounded-full text-xs font-medium bg-blue-500/10 text-blue-600 border border-blue-500/20 capitalize">
                                            <%= product.category %>
                                        </span>
                                    </td>
                                    <td class="p-5 text-[var(--admin-text-main)]">
                                        <div class="font-bold">₹<%= product.price.toLocaleString('en-IN') %></div>
                                        <div class="text-xs text-[var(--admin-text-muted)] line-through">₹<%= product.mrp.toLocaleString('en-IN') %></div>
                                    </td>
                                    <td class="p-5">
                                        <form action="/admin/update-stock" method="POST" class="flex items-center gap-2">
                                            <input type="hidden" name="productId" value="<%= product._id %>">
                                            <div class="relative">
                                                <input type="number" name="quantity" value="<%= product.quantity %>" min="0" 
                                                    class="w-20 bg-[var(--admin-bg)] border border-[var(--admin-border)] text-[var(--admin-text-main)] text-sm rounded-lg px-3 py-1.5 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all text-center font-bold"
                                                >
                                            </div>
                                            <button type="submit" class="w-8 h-8 rounded-lg bg-blue-600 hover:bg-blue-700 text-white flex items-center justify-center shadow-lg shadow-blue-900/20 transition-all transform active:scale-95" title="Update Stock">
                                                <i class="ri-refresh-line"></i>
                                            </button>
                                        </form>
                                        <div class="mt-2">
                                            <% if (product.quantity > 0) { %>
                                                <span class="text-xs text-[var(--admin-text-muted)]"><%= product.quantity %> units</span>
                                            <% } else { %>
                                                <span class="text-xs text-red-500 font-bold">Out of Stock</span>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="p-5">
                                        <form action="/admin/toggle-status" method="POST">
                                            <input type="hidden" name="productId" value="<%= product._id %>">
                                            <input type="hidden" name="inStock" value="<%= !product.inStock %>">
                                            <button type="submit" class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 <%= product.inStock ? 'bg-green-500' : 'bg-gray-200' %>" title="Toggle Status">
                                                <span class="sr-only">Toggle stock</span>
                                                <span class="<%= product.inStock ? 'translate-x-6' : 'translate-x-1' %> inline-block h-4 w-4 transform rounded-full bg-white transition-transform"></span>
                                            </button>
                                            <div class="mt-1 text-[10px] font-bold <%= product.inStock ? 'text-green-500' : 'text-[var(--admin-text-muted)]' %>">
                                                <%= product.inStock ? 'Active' : 'Inactive' %>
                                            </div>
                                        </form>
                                    </td>
                                    <td class="p-5 text-right">
                                        <div class="flex items-center justify-end gap-2">
                                            <button onclick="openProductModal('<%= product._id %>')" class="w-9 h-9 rounded-lg bg-[var(--admin-bg)] border border-[var(--admin-border)] hover:border-blue-500 hover:text-blue-500 text-[var(--admin-text-muted)] flex items-center justify-center transition-all" title="View Details">
                                                <i class="ri-eye-line"></i>
                                            </button>
                                            <a href="/admin/edit-product/<%= product._id %>?edit=true" class="w-9 h-9 rounded-lg bg-[var(--admin-bg)] border border-[var(--admin-border)] hover:border-blue-500 hover:text-blue-500 text-[var(--admin-text-muted)] flex items-center justify-center transition-all" title="Edit">
                                                <i class="ri-pencil-line"></i>
                                            </a>
                                            <form action="/admin/delete-product" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                <input type="hidden" name="productId" value="<%= product._id %>">
                                                <button type="submit" class="w-9 h-9 rounded-lg bg-[var(--admin-bg)] border border-[var(--admin-border)] hover:border-red-500 hover:text-red-500 text-[var(--admin-text-muted)] flex items-center justify-center transition-all" title="Delete">
                                                    <i class="ri-delete-bin-line"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="p-12 text-center">
                                        <div class="flex flex-col items-center justify-center text-[var(--admin-text-muted)]">
                                            <i class="ri-inbox-2-line text-4xl mb-3 opacity-50"></i>
                                            <p class="text-lg font-medium">No products found</p>
                                            <p class="text-sm">Start by adding a new product to your inventory.</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <!-- Product Details Modal -->
        <div id="productModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
            <!-- Backdrop -->
            <div class="fixed inset-0 bg-black/60 backdrop-blur-sm transition-opacity opacity-0" id="modalBackdrop"></div>

            <div class="fixed inset-0 z-10 overflow-y-auto">
                <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                    <!-- Modal Panel -->
                    <div class="relative transform overflow-hidden rounded-2xl bg-[var(--admin-card)] text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-4xl opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95" id="modalPanel">
                        
                        <!-- Header -->
                        <div class="bg-[var(--admin-bg)]/50 px-6 py-4 border-b border-[var(--admin-border)] flex items-center justify-between">
                            <h3 class="text-lg font-bold text-[var(--admin-text-main)] flex items-center gap-2">
                                <i class="ri-macbook-line text-blue-500"></i> Product Details
                            </h3>
                            <button onclick="closeProductModal()" class="text-[var(--admin-text-muted)] hover:text-[var(--admin-text-main)] transition-colors">
                                <i class="ri-close-line text-2xl"></i>
                            </button>
                        </div>

                        <!-- Content -->
                        <div class="px-6 py-8">
                            <div class="flex flex-col lg:flex-row gap-8">
                                <!-- Image Section -->
                                <div class="lg:w-1/3">
                                    <div class="bg-white rounded-xl border border-gray-200 p-4 flex items-center justify-center aspect-square shadow-inner">
                                        <img id="modalImage" src="" alt="Product Image" class="max-w-full max-h-full object-contain">
                                    </div>
                                    <div class="mt-4 flex justify-between items-center bg-[var(--admin-bg)] p-3 rounded-lg border border-[var(--admin-border)]">
                                        <span class="text-xs font-bold text-[var(--admin-text-muted)] uppercase tracking-wider">Stock Status</span>
                                        <span id="modalStockBadge" class="px-2 py-1 rounded text-xs font-bold"></span>
                                    </div>
                                </div>

                                <!-- Details Section -->
                                <div class="lg:w-2/3 space-y-6">
                                    <div>
                                        <h2 id="modalName" class="text-2xl font-bold text-[var(--admin-text-main)] leading-tight mb-1"></h2>
                                        <div class="flex items-center gap-2 text-sm">
                                            <span id="modalBrand" class="text-[var(--admin-text-muted)] font-medium"></span>
                                            <span class="text-[var(--admin-border)]">•</span>
                                            <span id="modalCategory" class="text-blue-500 font-bold capitalize"></span>
                                        </div>
                                    </div>

                                    <div class="grid grid-cols-2 gap-4">
                                        <div class="bg-[var(--admin-bg)] p-4 rounded-xl border border-[var(--admin-border)]">
                                            <span class="text-xs text-[var(--admin-text-muted)] uppercase tracking-wider block mb-1">Price</span>
                                            <div class="flex items-baseline gap-2">
                                                <span id="modalPrice" class="text-xl font-bold text-[var(--admin-text-main)]"></span>
                                                <span id="modalMrp" class="text-sm text-[var(--admin-text-muted)] line-through"></span>
                                            </div>
                                        </div>
                                        <div class="bg-[var(--admin-bg)] p-4 rounded-xl border border-[var(--admin-border)]">
                                            <span class="text-xs text-[var(--admin-text-muted)] uppercase tracking-wider block mb-1">Discount</span>
                                            <span id="modalDiscount" class="text-xl font-bold text-green-500"></span>
                                        </div>
                                    </div>

                                    <div>
                                        <h4 class="text-sm font-bold text-[var(--admin-text-main)] mb-2 uppercase tracking-wider">Description</h4>
                                        <p id="modalDescription" class="text-sm text-[var(--admin-text-muted)] leading-relaxed bg-[var(--admin-bg)] p-4 rounded-xl border border-[var(--admin-border)]"></p>
                                    </div>

                                    <div>
                                        <h4 class="text-sm font-bold text-[var(--admin-text-main)] mb-2 uppercase tracking-wider">Specifications</h4>
                                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3" id="modalSpecs">
                                            <!-- Specs populated by JS -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="bg-[var(--admin-bg)]/50 px-6 py-4 border-t border-[var(--admin-border)] flex justify-end gap-3">
                            <button onclick="closeProductModal()" class="px-4 py-2 rounded-lg text-sm font-bold text-[var(--admin-text-muted)] hover:bg-[var(--admin-hover)] transition-colors">Close</button>
                            <a id="modalEditLink" href="#" class="px-4 py-2 rounded-lg text-sm font-bold bg-[#0071dc] hover:bg-blue-600 text-white transition-colors shadow-lg shadow-blue-900/20">Edit Product</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Success Modal -->
        <div id="successModal" class="fixed inset-0 z-[60] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
            <div class="fixed inset-0 bg-black/20 backdrop-blur-sm transition-opacity opacity-0" id="successBackdrop"></div>
            <div class="fixed inset-0 z-10 overflow-y-auto">
                <div class="flex min-h-full items-center justify-center p-4 text-center">
                    <div class="relative transform overflow-hidden rounded-2xl bg-white p-6 text-left shadow-xl transition-all opacity-0 scale-95" id="successPanel">
                        <div class="flex flex-col items-center justify-center text-center">
                            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
                                <i class="ri-checkbox-circle-fill text-4xl text-green-500"></i>
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Success!</h3>
                            <p class="text-gray-500">Product added successfully.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <script>
        // Pass products data to JS
        const productsData = <%- JSON.stringify(products) %>;

        function openProductModal(productId) {
            const product = productsData.find(p => p._id === productId);
            if (!product) return;

            // Populate Data
            document.getElementById('modalImage').src = product.image;
            document.getElementById('modalName').textContent = product.name;
            document.getElementById('modalBrand').textContent = product.brand;
            document.getElementById('modalCategory').textContent = product.category;
            
            document.getElementById('modalPrice').textContent = '₹' + product.price.toLocaleString('en-IN');
            document.getElementById('modalMrp').textContent = '₹' + product.mrp.toLocaleString('en-IN');
            document.getElementById('modalDiscount').textContent = product.discount + '% OFF';
            document.getElementById('modalDescription').textContent = product.description;

            // Stock Badge
            const stockBadge = document.getElementById('modalStockBadge');
            if (product.inStock) {
                stockBadge.textContent = 'In Stock (' + product.quantity + ' units)';
                stockBadge.className = 'px-2 py-1 rounded text-xs font-bold bg-green-500/10 text-green-500 border border-green-500/20';
            } else {
                stockBadge.textContent = 'Out of Stock';
                stockBadge.className = 'px-2 py-1 rounded text-xs font-bold bg-red-500/10 text-red-500 border border-red-500/20';
            }

            // Specs
            const specsContainer = document.getElementById('modalSpecs');
            specsContainer.innerHTML = '';
            if (product.specifications) {
                Object.entries(product.specifications).forEach(([key, value]) => {
                    if (value) {
                        const specDiv = document.createElement('div');
                        specDiv.className = 'bg-[var(--admin-bg)] p-3 rounded-lg border border-[var(--admin-border)]';
                        specDiv.innerHTML = `
                            <span class="text-[10px] text-[var(--admin-text-muted)] uppercase tracking-wide block mb-0.5">${key.replace(/([A-Z])/g, ' $1').trim()}</span>
                            <span class="font-bold text-[var(--admin-text-main)] text-xs truncate block" title="${value}">${value}</span>
                        `;
                        specsContainer.appendChild(specDiv);
                    }
                });
            }

            // Edit Link
            document.getElementById('modalEditLink').href = '/admin/edit-product/' + product._id + '?edit=true';

            // Show Modal
            const modal = document.getElementById('productModal');
            const backdrop = document.getElementById('modalBackdrop');
            const panel = document.getElementById('modalPanel');

            modal.classList.remove('hidden');
            // Small delay to allow display:block to apply before opacity transition
            setTimeout(() => {
                backdrop.classList.remove('opacity-0');
                panel.classList.remove('opacity-0', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95');
                panel.classList.add('opacity-100', 'translate-y-0', 'sm:scale-100');
            }, 10);
        }

        function closeProductModal() {
            const modal = document.getElementById('productModal');
            const backdrop = document.getElementById('modalBackdrop');
            const panel = document.getElementById('modalPanel');

            backdrop.classList.add('opacity-0');
            panel.classList.remove('opacity-100', 'translate-y-0', 'sm:scale-100');
            panel.classList.add('opacity-0', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95');

            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300); // Match transition duration
        }

        // Close on backdrop click
        document.getElementById('modalBackdrop').addEventListener('click', closeProductModal);

        // Check for success query param
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true') {
            const successModal = document.getElementById('successModal');
            const successBackdrop = document.getElementById('successBackdrop');
            const successPanel = document.getElementById('successPanel');

            successModal.classList.remove('hidden');
            setTimeout(() => {
                successBackdrop.classList.remove('opacity-0');
                successPanel.classList.remove('opacity-0', 'scale-95');
                successPanel.classList.add('opacity-100', 'scale-100');
            }, 10);

            // Auto close after 3 seconds
            setTimeout(() => {
                successBackdrop.classList.add('opacity-0');
                successPanel.classList.remove('opacity-100', 'scale-100');
                successPanel.classList.add('opacity-0', 'scale-95');
                setTimeout(() => {
                    successModal.classList.add('hidden');
                    // Clean URL
                    window.history.replaceState({}, document.title, window.location.pathname);
                }, 300);
            }, 3000);
        }
    </script>
</body>
</html>
