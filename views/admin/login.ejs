<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body
    class="bg-[var(--admin-bg)] font-sans antialiased text-[var(--admin-text-main)] h-screen flex items-center justify-center overflow-hidden selection:bg-purple-500 selection:text-white transition-colors duration-300"
  >
    <div
      class="bg-[var(--admin-card)] w-full max-w-6xl h-[85vh] rounded-3xl shadow-2xl overflow-hidden flex border border-[var(--admin-border)] relative"
    >
      <!-- Left Side: Illustration -->
      <div
        class="hidden lg:flex w-1/2 bg-purple-50/50 dark:bg-purple-900/10 relative items-center justify-center p-12"
      >
        <!-- Decorative Circles -->
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-purple-200/20 dark:bg-purple-500/10 rounded-full blur-3xl"
        ></div>

        <div class="relative z-10 w-full max-w-md">
          <img
            src="https://cdni.iconscout.com/illustration/premium/thumb/man-working-on-laptop-illustration-download-in-svg-png-gif-file-formats--business-work-office-pack-people-illustrations-4550346.png"
            alt="Admin Login Illustration"
            class="w-full h-auto drop-shadow-2xl animate-float"
          />

          <!-- Floating Stats Card 1 -->
          <div
            class="absolute -top-4 -left-4 bg-[var(--admin-card)] p-4 rounded-2xl shadow-lg border border-[var(--admin-border)] animate-float-delayed"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="w-8 h-8 rounded-lg bg-green-100 text-green-600 flex items-center justify-center"
              >
                <i class="ri-bar-chart-fill"></i>
              </div>
              <span class="text-xs font-bold text-[var(--admin-text-muted)]"
                >Profit</span
              >
            </div>
            <div class="text-xl font-bold text-[var(--admin-text-main)]">
              â‚¹ 8.4L
            </div>
            <div class="text-xs text-green-500 font-medium">
              +12% this month
            </div>
          </div>

          <!-- Floating Stats Card 2 -->
          <div
            class="absolute bottom-8 -right-4 bg-[var(--admin-card)] p-4 rounded-2xl shadow-lg border border-[var(--admin-border)] animate-float"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="w-8 h-8 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center"
              >
                <i class="ri-shopping-bag-3-fill"></i>
              </div>
              <span class="text-xs font-bold text-[var(--admin-text-muted)]"
                >Orders</span
              >
            </div>
            <div class="text-xl font-bold text-[var(--admin-text-main)]">
              1,240
            </div>
            <div class="text-xs text-blue-500 font-medium">+5% new orders</div>
          </div>
        </div>
      </div>

      <!-- Right Side: Form -->
      <div
        class="w-full lg:w-1/2 p-8 md:p-16 flex flex-col justify-center relative bg-[var(--admin-card)]"
      >
        <!-- Logo -->
        <div class="flex items-center gap-2 mb-8">
          <div
            class="w-8 h-8 rounded-lg bg-purple-600 flex items-center justify-center text-white font-bold text-lg rotate-12 shadow-lg shadow-purple-900/50"
          >
            <i class="ri-command-fill"></i>
          </div>
          <span
            class="text-[var(--admin-text-main)] text-xl font-bold tracking-tight font-heading"
            >Simtech</span
          >
        </div>

        <!-- Header -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-[var(--admin-text-main)] mb-2">
            Welcome to Simtech! ðŸ‘‹
          </h2>
          <p class="text-[var(--admin-text-muted)] text-sm">
            Please sign-in to your account and start the adventure
          </p>
        </div>

        <!-- Form -->
        <form action="/admin/login" method="POST" class="space-y-5">
          <div>
            <label
              for="email"
              class="block text-xs font-bold text-[var(--admin-text-muted)] uppercase tracking-wider mb-2"
              >Email or Username</label
            >
            <input
              type="email"
              id="email"
              name="email"
              placeholder="admin@simtech.com"
              class="w-full bg-[var(--admin-bg)] border border-[var(--admin-border)] text-[var(--admin-text-main)] text-sm rounded-xl px-4 py-3 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all"
              required
            />
          </div>

          <div>
            <div class="flex justify-between items-center mb-2">
              <label
                for="password"
                class="block text-xs font-bold text-[var(--admin-text-muted)] uppercase tracking-wider"
                >Password</label
              >
              <a
                href="#"
                class="text-xs text-purple-600 hover:text-purple-700 font-bold"
                >Forgot Password?</a
              >
            </div>
            <div class="relative">
              <input
                type="password"
                id="password"
                name="password"
                placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                class="w-full bg-[var(--admin-bg)] border border-[var(--admin-border)] text-[var(--admin-text-main)] text-sm rounded-xl px-4 py-3 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all"
                required
              />
              <button
                type="button"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-[var(--admin-text-muted)] hover:text-[var(--admin-text-main)]"
              >
                <i class="ri-eye-off-line"></i>
              </button>
            </div>
          </div>

          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember"
              name="remember"
              class="w-4 h-4 text-purple-600 bg-[var(--admin-bg)] border-[var(--admin-border)] rounded focus:ring-purple-500"
            />
            <label
              for="remember"
              class="ml-2 text-sm text-[var(--admin-text-muted)]"
              >Remember Me</label
            >
          </div>

          <button
            type="submit"
            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 rounded-xl shadow-lg shadow-purple-900/30 transition-all transform hover:-translate-y-0.5"
          >
            Sign in
          </button>
        </form>

        <div class="mt-6 text-center">
          <p class="text-sm text-[var(--admin-text-muted)]">
            New on our platform?
            <a href="#" class="text-purple-600 hover:text-purple-700 font-bold"
              >Create an account</a
            >
          </p>
        </div>

        <div class="my-6 flex items-center gap-4">
          <div class="h-px bg-[var(--admin-border)] flex-grow"></div>
          <span class="text-xs text-[var(--admin-text-muted)] uppercase"
            >or</span
          >
          <div class="h-px bg-[var(--admin-border)] flex-grow"></div>
        </div>

        <div class="flex justify-center gap-4">
          <button
            class="w-10 h-10 rounded-lg bg-[var(--admin-bg)] border border-[var(--admin-border)] flex items-center justify-center text-[var(--admin-text-muted)] hover:text-[#1877F2] hover:border-[#1877F2]/30 hover:bg-[#1877F2]/5 transition-all"
          >
            <i class="ri-facebook-fill text-lg"></i>
          </button>
          <button
            class="w-10 h-10 rounded-lg bg-[var(--admin-bg)] border border-[var(--admin-border)] flex items-center justify-center text-[var(--admin-text-muted)] hover:text-[#1DA1F2] hover:border-[#1DA1F2]/30 hover:bg-[#1DA1F2]/5 transition-all"
          >
            <i class="ri-twitter-x-fill text-lg"></i>
          </button>
          <button
            class="w-10 h-10 rounded-lg bg-[var(--admin-bg)] border border-[var(--admin-border)] flex items-center justify-center text-[var(--admin-text-muted)] hover:text-[#DB4437] hover:border-[#DB4437]/30 hover:bg-[#DB4437]/5 transition-all"
          >
            <i class="ri-google-fill text-lg"></i>
          </button>
        </div>
      </div>
    </div>

    <style>
      @keyframes float {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      @keyframes float-delayed {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      .animate-float {
        animation: float 6s ease-in-out infinite;
      }
      .animate-float-delayed {
        animation: float-delayed 5s ease-in-out infinite;
        animation-delay: 1s;
      }
    </style>
  </body>
</html>
