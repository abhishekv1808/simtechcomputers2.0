<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body
    class="bg-[var(--admin-bg)] font-sans antialiased text-[var(--admin-text-main)] h-screen flex items-center justify-center overflow-hidden selection:bg-red-500 selection:text-white transition-colors duration-300"
  >
    <div
      class="bg-[var(--admin-card)] w-full max-w-6xl h-[85vh] rounded-3xl shadow-2xl overflow-hidden flex border border-[var(--admin-border)] relative"
    >
      <!-- Left Side: Illustration -->
      <div
        class="hidden lg:flex w-1/2 bg-red-50/50 dark:bg-red-900/10 relative items-center justify-center p-12"
      >
        <!-- Decorative Circles -->
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-red-200/20 dark:bg-red-500/10 rounded-full blur-3xl"
        ></div>

        <div class="relative z-10 w-full max-w-xl">
          <img
            src="/images/simtech-computers-admin-image.png"
            alt="Admin Login Illustration"
            class="w-full h-auto drop-shadow-2xl animate-float"
          />

          <!-- Floating Stats Card 1 -->
          <div
            class="absolute -top-4 -left-4 bg-[var(--admin-card)] p-4 rounded-2xl shadow-lg border border-[var(--admin-border)] animate-float-delayed"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="w-8 h-8 rounded-lg bg-green-100 text-green-600 flex items-center justify-center"
              >
                <i class="ri-bar-chart-fill"></i>
              </div>
              <span class="text-xs font-bold text-[var(--admin-text-muted)]"
                >Profit</span
              >
            </div>
            <div class="text-xl font-bold text-[var(--admin-text-main)]">
              â‚¹ 8.4L
            </div>
            <div class="text-xs text-green-500 font-medium">
              +12% this month
            </div>
          </div>

          <!-- Floating Stats Card 2 -->
          <div
            class="absolute bottom-8 -right-4 bg-[var(--admin-card)] p-4 rounded-2xl shadow-lg border border-[var(--admin-border)] animate-float"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="w-8 h-8 rounded-lg bg-red-100 text-red-600 flex items-center justify-center"
              >
                <i class="ri-shopping-bag-3-fill"></i>
              </div>
              <span class="text-xs font-bold text-[var(--admin-text-muted)]"
                >Orders</span
              >
            </div>
            <div class="text-xl font-bold text-[var(--admin-text-main)]">
              1,240
            </div>
            <div class="text-xs text-red-500 font-medium">+5% new orders</div>
          </div>
        </div>
      </div>

      <!-- Right Side: Form -->
      <div
        class="w-full lg:w-1/2 p-8 md:p-16 flex flex-col justify-center relative bg-[var(--admin-card)]"
      >
        <!-- Logo -->
        <div class="flex items-center gap-2 mb-8">
          <img
            src="/images/simtech-computers-logo.svg"
            alt="Simtech"
            class="h-16 w-auto object-contain"
          />
        </div>

        <!-- Header -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-[var(--admin-text-main)] mb-2">
            Simtech admin panel! ðŸ‘‹
          </h2>
          <p class="text-[var(--admin-text-muted)] text-sm">
            Please sign-in to your account and start the operations
          </p>
        </div>

        <!-- Form -->
        <form action="/admin/login" method="POST" class="space-y-5">
          <div>
            <label
              for="email"
              class="block text-xs font-bold text-[var(--admin-text-muted)] uppercase tracking-wider mb-2"
              >Email or Username</label
            >
            <input
              type="email"
              id="email"
              name="email"
              placeholder="admin@simtech.com"
              class="w-full bg-[var(--admin-bg)] border border-[var(--admin-border)] text-[var(--admin-text-main)] text-sm rounded-xl px-4 py-3 focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500 transition-all"
              required
            />
          </div>

          <div>
            <div class="flex justify-between items-center mb-2">
              <label
                for="password"
                class="block text-xs font-bold text-[var(--admin-text-muted)] uppercase tracking-wider"
                >Password</label
              >
              <a
                href="#"
                class="text-xs text-red-600 hover:text-red-700 font-bold"
                >Forgot Password?</a
              >
            </div>
            <div class="relative">
              <input
                type="password"
                id="password"
                name="password"
                placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                class="w-full bg-[var(--admin-bg)] border border-[var(--admin-border)] text-[var(--admin-text-main)] text-sm rounded-xl px-4 py-3 focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500 transition-all"
                required
              />
              <button
                type="button"
                id="togglePassword"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-[var(--admin-text-muted)] hover:text-[var(--admin-text-main)] focus:outline-none"
              >
                <i class="ri-eye-off-line"></i>
              </button>
            </div>
          </div>

          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember"
              name="remember"
              class="w-4 h-4 text-red-600 bg-[var(--admin-bg)] border-[var(--admin-border)] rounded focus:ring-red-500"
            />
            <label
              for="remember"
              class="ml-2 text-sm text-[var(--admin-text-muted)]"
              >Remember Me</label
            >
          </div>

          <button
            type="submit"
            class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 rounded-xl shadow-lg shadow-red-900/30 transition-all transform hover:-translate-y-0.5"
          >
            Sign in
          </button>
        </form>
      </div>
    </div>

    <style>
      @keyframes float {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      @keyframes float-delayed {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      .animate-float {
        animation: float 6s ease-in-out infinite;
      }
      .animate-float-delayed {
        animation: float-delayed 5s ease-in-out infinite;
        animation-delay: 1s;
      }
    </style>

    <script>
      const togglePassword = document.querySelector("#togglePassword");
      const password = document.querySelector("#password");

      togglePassword.addEventListener("click", function (e) {
        // toggle the type attribute
        const type =
          password.getAttribute("type") === "password" ? "text" : "password";
        password.setAttribute("type", type);

        // toggle the eye slash icon
        const icon = this.querySelector("i");
        if (type === "password") {
          icon.classList.remove("ri-eye-line");
          icon.classList.add("ri-eye-off-line");
        } else {
          icon.classList.remove("ri-eye-off-line");
          icon.classList.add("ri-eye-line");
        }
      });
    </script>
  </body>
</html>
